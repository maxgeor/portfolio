---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Max Georgopoulos">
	<main class="pb-48" >
		<header class="p-6 py-12 ">
			<div class="flex justify-between gap-x-12">
				<ul class="flex flex-col gap-y-1">
					<li class="leading-[16px] text-[10px] font-ibm text-[#8c8c8c] uppercase tracking-wider ">Work</li>
					<li class="leading-[16px] text-[10px] font-ibm text-[#8c8c8c] uppercase tracking-wider ">Writing</li>
					<li class="leading-[16px] text-[10px] font-ibm text-[#8c8c8c] uppercase tracking-wider ">Random</li>
				</ul>
				<div class="text-right">
					<h1 class="leading-[32px] md:leading-[36px] mb-3 text-4xl md:text-5xl italic tracking-tight ml-4">
						Max Georgopoulos
					</h1>
					<div class="flex gap-x-1.5 justify-end items-baseline flex-wrap leading-[16px] text-[10px] font-ibm text-[#8c8c8c] uppercase tracking-wider ">
						<span>Frontend-developer</span> 
						<span class="font-crimson italic text-base h-4">&</span> 
						<span>product designer</span> 
					</div>
					<div class="flex gap-x-1.5 text-[#8c8c8c] mt-3 justify-end items-baseline flex-wrap leading-[16px] text-[10px] font-ibm  uppercase tracking-wider">
						<a href="" >
							<!-- <img src="/icons/mail.svg" class="w-5 h-5" alt="email"> -->
							Email
						</a>
						<span class="text-neutral-600">/</span>
