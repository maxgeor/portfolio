---
import Layout from '../layouts/Layout.astro';
import WorkBlock from '../components/WorkBlock.astro';
import LinkBlock from '../components/LinkBlock.astro';
---
<Layout title="Max Georgopoulos">
	<div class="grid md:grid-cols-12 gap-10 lg:gap-20 relative md:max-w-7xl mx-auto w-full px-5 md:px-10">
		<aside class="md:col-span-3 flex flex-col md:h-screen md:sticky md:top-0 py-5 md:py-10">
			<section class="flex flex-col md:justify-between gap-5 lg:gap-10 h-full">
				<div class="flex flex-col gap-5 md:gap-10 flex-grow md:overflow-y-scroll">
					<h1 id="logo" class="font-bodoni uppercase text-xl -my-1.5 text-center md:text-left ">MG</h1>
					<p class="-my-1 -mt-2 sm:max-w-prose mx-auto indent-5 md:indent-0">I'm a product designer & developer based out of Toronto. I believe that the boundary between design and engineering is artificial — you get the best results by blending the two. Lately, I've been inspired by Ryan Singer's design techniques, TailwindCSS, and The 2023 Spring Summer Collection from Homme Plissé.</p>
				</div>
				<div class="flex md:flex-col gap-y-1 justify-center md:justify-around gap-x-5 flex-wrap -my-1 ">
					<a href="#" class="hover:underline">Email</a>
					<a href="#" class="hover:underline">Are.na</a>
					<a href="#" class="hover:underline">Github</a>
					<a href="#" class="hover:underline">Twitter</a>
					<a href="#" class="hover:underline">Dribbble</a>
				</div>
			</section>
		</aside>
		<main class="md:col-span-9 relative pt-5 md:pt-10 pb-40 flex flex-col gap-20">
			<section class="flex flex-col gap-10">
				<WorkBlock
					title='Memiori'
					href='/work/memiori'
					description="Redesign & brand refresh for mood tracking app"
					roles={['Branding', 'Mobile Design']}
					year={2023}
				/>
				<WorkBlock
					title='Wavy'
					titleTightness='tight'
					href='/work/wavy'
					description="Built & co-designed working as a full-stack developer at Wavy"
					roles={['Full-Stack Development', 'UX/UI Design']}
					year={2023}
				/>
				<WorkBlock
					title='Formie'
					href='/work/formie'
					description="Designed & co-built a form builder for smart contracts"
					roles={['Frontend Development', 'UX/UI Design', 'Branding']}
					year={2022}
				/>
			</section>
			<section class="flex flex-col gap-10">
				<h2 class="font-bodoni uppercase text-2xl leading-6 -my-0.5">
					Projects
				</h2>
				<div class="flex flex-col gap-y-1 -mb-1 -mt-2">
					<LinkBlock 
						type='project'
						title='Scope Todo'
						href='#'
						description="A good ol' todo widget for FigJam"
						externalLink={true}
					/>
					<LinkBlock 
						type='project'
						title='The Quest Board'
						href='#'
						description="Job board for the Loot community"
						externalLink={true}
					/>
					<LinkBlock 
						type='project'
						title='Sayings, Forgotten'
						href='#'
						description="Collection of sayings with forgotten meanings"
						externalLink={true}
					/>
					<LinkBlock 
						type='project'
						title='Dissect Design'
						href='#'
						description="Collection of design decisions"
						externalLink={true}
					/>
				</div>
			</section>
			<section class="flex flex-col gap-10">
				<h2 class="font-bodoni uppercase text-2xl leading-6 -my-0.5">
					Writing
				</h2>
				<div class="flex flex-col gap-y-1 -mb-1 -mt-2">
					<LinkBlock 
						type='writing'
						title='In defence of bad writing'
						href='#'
						description="Mar 2022"
					/>
					<LinkBlock 
						type='writing'
						title='Yes, you can learn to code'
						href='#'
						description="Feb 2021"
					/>
				</div>
			</section>
		</main>
	</div>
</Layout>

<style>
	.text-horizontal {
		writing-mode: sideways-lr;
	}
</style>