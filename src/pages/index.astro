---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Card from "../components/work/Card.astro";
import Link from "../components/Link.astro";
---

<Layout title="Max Georgopoulos">
  <div
    class="relative mx-auto max-w-[1900px] flex grid-cols-12 flex-col gap-12 px-6 sm:px-12 lg:grid"
  >
    <Header link={{ text: "About", href: "/about" }} />
    <section class="col-span-6 grid grid-cols-8 gap-6 xl:col-span-8">
      <h2
        class="col-span-full -mb-1 border-t border-[#e6e6e6] pt-1 dark:border-neutral-700 "
      >
        Work
      </h2>
      <Card
        title="Formie"
        href="/work/formie"
        roles={["Product", "Brand", "Code"]}
        image="/work/formie/preview.png"
        description="Project to build a universal UI for smart contracts"
      />
      <Card
        title="Memiori (coming soon)"
        href="#"
        roles={["Product", "Brand"]}
        image="/work/memiori/preview.png"
        description="Freelance refresh for a memory journaling app"
      />
      <!-- <Card
        title='Wavy'
        href='/work/wavy'
        roles={["Product", "Code"]}
        description='Features I built while working at Wavy'
      /> -->
    </section>
    <div class="col-span-6 flex flex-col gap-12 xl:col-span-4">
      <section class="flex flex-col gap-6">
        <h2
          class="col-span-full -mb-1 border-t border-[#e6e6e6] pt-1 dark:border-neutral-700 lg:col-span-3"
        >
          Projects
        </h2>
        <div class="col-span-full flex flex-col lg:col-span-9 xl:col-span-6">
          <Link
            type="project"
            title="Scope Todo"
            href="https://www.figma.com/community/widget/1036372982291551669"
            description="A good ol' todo widget for Figma"
            externalLink={true}
          />
          <Link
            type="project"
            title="The Quest Board"
            href="https://www.lootquestboard.com/"
            description="Job board for the Loot community"
            externalLink={true}
          />
          <Link
            type="project"
            title="Sayings, Forgotten"
            href="https://sayings-forgotten.maxgeor.repl.co/"
            description="Collection of sayings with forgotten meanings"
            externalLink={true}
          />
          <Link
            type="project"
            title="Dissect Design"
            href="https://dissect-design-sigma.vercel.app/"
            description="Collection of design decisions"
            externalLink={true}
          />
        </div>
      </section>
      <section class="flex flex-col gap-6">
        <h2
          class="col-span-full -mb-1 border-t border-[#e6e6e6] pt-1 dark:border-neutral-700 lg:col-span-3"
        >
          Writing
        </h2>
        <div class="col-span-full flex flex-col lg:col-span-9 xl:col-span-6">
          <Link
            type="writing"
            title="Write it"
            href="/writing/write"
            description="Jul 2023"
          />
          <Link
            type="writing"
            title="In defence of bad writing"
            href="/writing/bad"
            description="Mar 2022"
          />
          <Link
            type="writing"
            title="Yes, you can learn to code"
            href="/writing/yes"
            description="Feb 2021"
          />
        </div>
      </section>
    </div>
  </div>
</Layout>
