---
import Layout from '../layouts/Layout.astro';
import WorkBlock from '../components/WorkBlock.astro';
import LinkBlock from '../components/LinkBlock.astro';
---
<Layout title="Max Georgopoulos">
	<div class="grid sm:grid-cols-12 relative mx-auto gap-12 px-6 sm:px-12 ">
		<aside class="col-span-full lg:col-span-3 flex flex-col lg:h-screen lg:sticky lg:top-0 gap-6 pt-6 sm:pt-12 lg:pb-12">
			<h1 id="logo" class="col-span-full -my-1 ">Max Georgopoulos</h1>
			<div class="flex flex-col lg:justify-between gap-6 lg:gap-12 h-full ">
				<p class="sm:max-w-prose -my-1">I'm a product designer & developer based out of Toronto. I believe that the boundary between design and engineering is artificial — you get the best results by blending the two. Lately, I've been inspired by Ryan Singer's design techniques, TailwindCSS, and The 2023 Spring Summer Collection from Homme Plissé.</p>
				<div class="flex lg:flex-col flex-wrap gap-y-1 gap-x-6 -my-1">
					<a href="#" class="hover:underline">Email</a>
					<a href="#" class="hover:underline">Are.na</a>
					<a href="#" class="hover:underline">Github</a>
					<a href="#" class="hover:underline">Twitter</a>
					<a href="#" class="hover:underline">Dribbble</a>
				</div>
			</div>
		</aside>
		<main class="col-span-full lg:col-span-9 flex flex-col gap-12 relative lg:pt-6 pb-24">
			<section class="col-span-full flex flex-col gap-y-6 ">
				<!-- <WorkBlock
					title='Memiori'
					href='/work/memiori'
					type="Freelance"
				/> -->
				<WorkBlock
					title='Memiori'
					href='/work/memiori'
					type="Brand, Product"
				/>
				<!-- <WorkBlock
					title='Wavy'
					href='/work/wavy'
					type="Feature"
				/> -->
				<WorkBlock
					title='Wavy'
					href='/work/wavy'
					type="Development, Product"
				/>
				<!-- <WorkBlock
					title='Formie'
					href='/work/formie'
					type="Personal Project"
				/> -->
				<WorkBlock
					title='Formie'
					href='/work/formie'
					type="Brand, Development, Product"
				/>
			</section>
			<section class="col-span-full grid grid-cols-3 gap-y-6 gap-x-6 lg:gap-12">
				<h2 class="lg:pl-6 col-span-full lg:col-span-1 -my-1">
					Projects
				</h2>
				<div class="col-span-full lg:col-span-2 flex flex-col gap-y-1 -my-1">
					<LinkBlock 
						type='project'
						title='Scope Todo'
						href='#'
						description="A good ol' todo widget for FigJam"
						externalLink={true}
					/>
					<LinkBlock 
						type='project'
						title='The Quest Board'
						href='#'
						description="Job board for the Loot community"
						externalLink={true}
					/>
					<LinkBlock 
						type='project'
						title='Dissect Design'
						href='#'
						description="Collection of design decisions"
						externalLink={true}
					/>
					<LinkBlock 
						type='project'
						title='Sayings, Forgotten'
						href='#'
						description="Collection of sayings with forgotten meanings"
						externalLink={true}
					/>
				</div>
			</section>
			<section class="col-span-full grid grid-cols-3 gap-y-6 gap-x-6 lg:gap-12">
				<h2 class="lg:pl-6 col-span-full lg:col-span-1 -my-1">
					Writing
				</h2>
				<div class="col-span-full lg:col-span-2 flex flex-col gap-y-1 -my-1">
					<LinkBlock 
						type='writing'
						title='In defence of bad writing'
						href='#'
						description="Mar 2022"
					/>

					<LinkBlock 
						type='writing'
						title='Yes, you can learn to code'
						href='#'
						description="Feb 2021"
					/>
				</div>
			</section>
		</main>
	</div>
</Layout>