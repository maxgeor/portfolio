---
import Layout from '../layouts/Layout.astro';
import Card from '../components/work/Card.astro';
import LinkBlock from '../components/LinkBlock.astro';
---
<Layout title="Max Georgopoulos">
	<div class="grid sm:grid-cols-12 relative mx-auto gap-12 px-6 sm:px-12 ">
		<section class="col-span-full flex justify-between gap-6 md:gap-12 pt-6 sm:pt-12 ">
			<h1 class="col-span-full -my-1">Max Georgopoulos</h1>
			<a href="/about" class="hover:underline -my-1">About</a> 
		</section>
		<main class="col-span-full flex flex-col gap-12 relative pb-24">
			<Card
				title='Formie (wip)'
				href='/work/formie'
				roles={["Product", "Brand", "Dev"]}
				image="/work/formie/preview.png"
				description='Personal project to make a focused, universal UI for smart contracts'
			/>
			<Card
				title='Memiori (coming soon)'
				href='#'
				roles={["Product", "Brand"]}
				description='Freelance refresh for a memory journaling app'
			/>
			<!-- <Card
				title='Wavy'
				href='/work/wavy'
				roles={["Product", "Dev"]}
				description='Features I built while working at Wavy'
			/> -->
			<section class="col-span-full grid grid-cols-12 gap-4 lg:gap-12">
				<h2 class="col-span-full lg:col-span-3 -my-1 lg:my-0 lg:py-1 xl:py-0">
					Projects
				</h2>
				<div class="col-span-full lg:col-span-9 xl:col-span-6 flex flex-col xl:gap-1">
					<LinkBlock 
						type='project'
						title='Scope Todo'
						href='https://www.figma.com/community/widget/1036372982291551669'
						description="A good ol' todo widget for FigJam"
						externalLink={true}
					/>
					<LinkBlock 
						type='project'
						title='The Quest Board'
						href='https://www.lootquestboard.com/'
						description="Job board for the Loot community"
						externalLink={true}
					/>
					<LinkBlock 
					type='project'
					title='Sayings, forgotten'
					href='https://sayings-forgotten.maxgeor.repl.co/'
					description="Collection of sayings with forgotten meanings"
					externalLink={true}
					/>
					<LinkBlock 
						type='project'
						title='Dissect Design'
						href='https://dissect-design-sigma.vercel.app/'
						description="Collection of design decisions"
						externalLink={true}
					/>
				</div>
			</section>
			<section class="col-span-full grid grid-cols-12 gap-4 lg:gap-12">
				<h2 class="col-span-full lg:col-span-3 -my-1 lg:my-0 lg:py-1 xl:py-0">
					Writing
				</h2>
				<div class="col-span-full lg:col-span-9 xl:col-span-6 flex flex-col xl:gap-1">
					<LinkBlock 
						type='writing'
						title='In defence of bad writing'
						href='/writing/bad'
						description="Mar 2022"
					/>
					<LinkBlock 
						type='writing'
						title='Yes, you can learn to code'
						href='/writing/yes'
						description="Feb 2021"
					/>
				</div>
			</section>
		</main>
	</div>
</Layout>
