---
import Layout from '../layouts/Layout.astro';
import CaseStudyCard from '../components/CaseStudyCard.astro';
import DropLetter from '../components/DropLetter.astro';

---

<Layout title="Max Georgopoulos">
		<!-- <section id="hero" class="-mt-4 mb-10 font-untitled-serif text-neutral-400 text-4xl leading-[44px] md:text-5xl md:leading-[60px] xl:text-6xl xl:leading-[72px]"> -->
		<section id="hero" class="-mt-4 mb-10 font-untitled-serif text-neutral-400 text-4xl leading-[44px] md:text-5xl md:leading-[60px]">
				<DropLetter letter="M" classes="text-neutral-800 float-left font-floral text-[130px] md:text-[178px]  pt-[35px] md:pt-[48px] pr-2 md:pr-2.5 -ml-0.5 md:-ml-1"/>
				ax here. I'm a <span class="flower-letter text-neutral-800">designer & developer</span> based out of <span class="text-neutral-800 flower-letters">Toronto</span>. I love to <span class="text-neutral-800">think big</span>, <span class="text-neutral-800">question everything</span> and <span class="text-neutral-800">blur the lines</span> between design and engineering (you get better results by blending the two).
			</h1>
		</section>
		<div class="grid grid-cols-1 xl:grid-cols-2 gap-20 mb-20 ">
			<CaseStudyCard
				title="Memiori"
				href="/studies/memiori"
				type="Freelance"
				description="Redesigned note taking app"
				roles={["branding", "Mobile design"]}
				image="/studies/memiori/preview.png"
	
				roles={["UI/UX design", "Full-stack development"]}
				tools={["Figma", "NextJS"]}
			/>
			<CaseStudyCard
				title="Polls"
				href="/studies/polls"
				type="Feature"
				company="Wavy"
				description="Built and co-designed Wavy's Polls feature"
				roles={["UI/UX design", "Full-stack development"]}
				collaborators={
					[{
						name: "Dan Stein",
						role: "Design",
						link: "https://twitter.com/hassantsyed",
					}]
				}
				tools={["Ruby on Rails", "Hotwire", "TailwindCSS"]}
			/>
			<CaseStudyCard
				title="Formie"
				company="Wavy"
				href="/studies/formie"
				type="Personal Project"
				description="Designed & co-built a smart contract UI generator"
				roles={["Branding", "UI/UX design", "Frontend development"]}
				collaborators={
					[{
							name: "Hassan Syed",
							role: "Development",
							link: "https://twitter.com/hassantsyed",
						},
						// { name: "Max Syed", role: "Frontend", link: "https://twitter.com/hassantsyed" },
					]
				}
				tools={["NextJS", "Firebase", "TailwindCSS"]}
				tldr="Transforming smart contract interaction with focused, friendly forms."
			/>
			<CaseStudyCard
				title="Formie"
				company="Wavy"
				href="/studies/formie"
				type="Personal Project"
				description="Designed & co-built a smart contract UI generator"
				roles={["Branding", "UI/UX design", "Frontend development"]}
				collaborators={
					[{
							name: "Hassan Syed",
							role: "Development",
							link: "https://twitter.com/hassantsyed",
						},
						// { name: "Max Syed", role: "Frontend", link: "https://twitter.com/hassantsyed" },
					]
				}
				tools={["NextJS", "Firebase", "TailwindCSS"]}
				tldr="Transforming smart contract interaction with focused, friendly forms."
			/>
		</div>
		<!-- <hr class="h-[0.5px] border-t-[0.5px] border-neutral-800"/> -->
		<section class="grid xl:grid-cols-2 gap-20">
			<!-- <div class="flex flex-col gap-5 border-t-[0.5px] border-neutral-800 pt-5"> -->
			<div class="flex flex-col gap-5">
				<h2 class="text-4xl leading-6 pt-0.5 pb-2.5 font-untitled-serif">Projects</h2>
				<div class="flex ">
					<table>
						<tr>
							<td>Scope Todo</td>
							<td class="">Figma todow widget</td>
						</tr>
						<tr>
							<td>Dissect Design</td>
							<td class="">Place to find and share product design case studies</td>
						</tr>
						<tr>
							<td>Sayings, forgotten</td>
							<td class="">Collection of saying who's meanings changed overtime</td>
						</tr>
					</table>
				</div>
			</div>
			<!-- <div class="flex flex-col gap-5 border-t-[0.5px] border-neutral-800 pt-5"> -->
			<div class="flex flex-col gap-5">
				<h2 class="text-4xl leading-6 pt-0.5 pb-2.5 font-untitled-serif">Writing</h2>
				<div class="flex flex-col gap-y-2">
					<a href="/writing/yes" class="flex flex-col sm:flex-row items-baseline flex-wrap gap-x-3 group underline-none ">
						<p class=" group-hover:underline">Yes, you can learn to code</p> 
						<span class="uppercase tracking-wider text-[9px] ">Feb 2022</span>
					</a>
				</div>
			</div>
		</section>
</Layout>

<style>
	section#hero > p > span {
		color: #262626;
	}
</style>

