---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Card from "../components/work/Card.astro";
import Link from "../components/Link.astro";
---

<Layout title="Max Georgopoulos">
  <div class="relative mx-auto max-w-[1900px] grid grid-cols-1 md:grid-cols-3 xl:grid-cols-4 gap-4 px-4">
    <Header link={{ text: "About", href: "/about" }} />
    <section class="col-span-full xl:col-start-2 grid md:grid-cols-3 gap-x-4 gap-y-3 -mt-px">
      <div class="col-span-full flex justify-between border-t border-[#DADADA] h-min dark:border-neutral-700 ">
        <h2>Work</h2>
        <select class="bg-transparent text-neutral-500 -mr-[3px]">
          <option value="everything">Everything</option>
          <option value="everything">Work</option>
          <option value="everything">Projects</option>
          <option value="everything">Archive</option>
        </select>
      </div>
      <Card
        title="Formie"
        href="/work/formie"
        image="/work/formie/preview"
        description="Universal UI for smart contracts."
      />
      <Card
        title="Memiori (coming soon)"
        href="#"
        image="/work/memiori/preview"
        description="Refresh for mood journaling app."
      />
      <Card
        title='Wavy'
        href='/work/wavy'
        description='Features I built while working at Wavy'
        image="/work/memiori/preview"
      />
      <Card
        title="Formie"
        href="/work/formie"
        image="/work/formie/preview"
        description="Universal UI for smart contracts."
      />
      <Card
        title="Memiori (coming soon)"
        href="#"
        image="/work/memiori/preview"
        description="Refresh for mood journaling app."
      />
      <Card
        title='Wavy'
        href='/work/wavy'
        description='Features I built while working at Wavy'
        image="/work/memiori/preview"
      />
      <Card
        title="Formie"
        href="/work/formie"
        image="/work/formie/preview"
        description="Universal UI for smart contracts."
      />
      <Card
        title="Memiori (coming soon)"
        href="#"
        image="/work/memiori/preview"
        description="Refresh for mood journaling app."
      />
      <Card
        title='Wavy'
        href='/work/wavy'
        description='Features I built while working at Wavy'
        image="/work/memiori/preview"
      />
    </section>
    <section class="xl:col-start-1 xl:col-end-2 flex flex-col gap-3 -mt-px">
      <h2
        class="border-t border-[#DADADA] dark:border-neutral-700 lg:col-span-3"
      >
        Projects
      </h2>
      <div class="flex flex-col lg:col-span-9 xl:col-span-3 gap-3">
        <Link
          type="project"
          title="Scope Todo"
          href="https://www.figma.com/community/widget/1036372982291551669"
          description="A good ol' todo widget for Figma."
          externalLink={true}
        />
        <Link
          type="project"
          title="The Quest Board"
          href="https://www.lootquestboard.com/"
          description="Job board for the Loot community."
          externalLink={true}
        />
        <Link
          type="project"
          title="Sayings, Forgotten"
          href="https://sayings-forgotten.maxgeor.repl.co/"
          description="Collection of sayings with forgotten meanings."
          externalLink={true}
        />
        <Link
          type="project"
          title="Dissect Design"
          href="https://dissect-design-sigma.vercel.app/"
          description="Collection of design decisions."
          externalLink={true}
        />
      </div>
    </section>
    <section class="xl:col-start-1 xl:col-end-2 flex flex-col gap-3 -mt-px">
      <h2
        class="col-span-full border-t border-[#DADADA] dark:border-neutral-700 lg:col-span-3"
      >
        Writing
      </h2>
      <div class="col-span-full flex flex-col lg:col-span-9 xl:col-span-3 gap-3">
        <Link
          type="writing"
          title="Write it"
          href="/writing/write"
          description="Jul 2023"
        />
        <Link
          type="writing"
          title="In defence of bad writing"
          href="/writing/bad"
          description="Mar 2022"
        />
        <Link
          type="writing"
          title="Yes, you can learn to code"
          href="/writing/yes"
          description="Feb 2021"
        />
      </div>
    </section>
  </div>
</Layout>
