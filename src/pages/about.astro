---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CopyIcon from '../components/icons/CopyIcon.astro';
import CopiedIcon from '../components/icons/CopiedIcon.astro';
import ExternalLinkIcon from '../components/icons/ExternalLinkIcon.astro';
---
<Layout title="Max Georgopoulos">
	<main class="col-span-full flex flex-col gap-12 px-6 sm:px-12 pb-12">
		<Header link={{ text: 'Resume', href: '/resume-max-georgopoulos.pdf' }} />
		<div class="flex flex-col lg:grid lg:grid-cols-12 gap-12">
			<img src="/me.jpeg" alt="my face" class="col-span-4 xl:col-span-3 aspect-square max-w-sm w-full mx-auto" />
			<div class="col-span-8 xl:col-span-9 flex flex-col justify-between xl:flex-row gap-12">
				<p class="xl:basis-2/3 max-w-prose mx-auto lg:mx-0 -my-1">Yo! I'm a designer and developer based out of Toronto, but I bum around different places. I believe that the boundary between design and engineering is artificial — you get the best results by blending the two. Lately, I've been inspired by Ryan Singer's design techniques, TailwindCSS, and The 2023 Spring Summer Collection from Homme Plissé.</p>
				<div class="xl:basis-1/3 flex flex-col">
					<a href="https://www.are.na/max-georgopoulos" target="_blank" class="flex justify-between items-center hover:underline py-1 border-t w-full">
						<span>Arena</span>

						<svg class="mt-0.5" width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M3.64645 11.3536C3.45118 11.1583 3.45118 10.8417 3.64645 10.6465L10.2929 4L6 4C5.72386 4 5.5 3.77614 5.5 3.5C5.5 3.22386 5.72386 3 6 3L11.5 3C11.6326 3 11.7598 3.05268 11.8536 3.14645C11.9473 3.24022 12 3.36739 12 3.5L12 9.00001C12 9.27615 11.7761 9.50001 11.5 9.50001C11.2239 9.50001 11 9.27615 11 9.00001V4.70711L4.35355 11.3536C4.15829 11.5488 3.84171 11.5488 3.64645 11.3536Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
					</a>
					<a href="https://github.com/maxgeor" target="_blank" class="flex justify-between items-center hover:underline py-1 border-t w-full">
						<span>Github</span>
						<ExternalLinkIcon classes="mt-0.5"  />
					</a>
					<a href="https://twitter.com/maxoulos" target="_blank" class="flex justify-between items-center hover:underline py-1 border-t w-full">
						<span>Twitter</span>
						<ExternalLinkIcon classes="mt-0.5"  />
					</a>
					<a href="https://dribbble.com/maxgeo" target="_blank" class="flex justify-between items-center hover:underline py-1 border-t w-full">
						<span>Dribbble</span>
						<ExternalLinkIcon classes="mt-0.5"  />
					</a>
					<a href="https://www.linkedin.com/in/max-georgopoulos-109095136/" target="_blank" class="flex justify-between items-center hover:underline py-1 border-t w-full">
						<span>LinkedIn</span>
						<ExternalLinkIcon classes="mt-0.5"  />
					</a>
					<button id="email" class="group flex items-center justify-between py-1 border-y cursor-pointer w-full">
						<span class="group-hover:underline flex gap-px">max123358 <code>@</code>gmail.com</span>
						<CopyIcon id="copyIcon" />
						<CopiedIcon id="copyConfirmationIcon" classes='hidden' />
					</button>
				</div>
			</div>
		</div>
	</main>
</Layout>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const email = document.querySelector('#email');

		if (email == null) return;

		email.addEventListener('click', function() {
			var textToCopy = email.innerText;
			navigator.clipboard.writeText(textToCopy)
				.then(function() {
					console.log('Text copied to clipboard: ' + textToCopy);
				})
				.catch(function(error) {
					console.error('Error copying text to clipboard: ', error);
				});

			// Show the hidden span tag
			const copyIcon = document.querySelector('#copyIcon');
			const copyConfirmationIcon = document.querySelector('#copyConfirmationIcon');
			copyIcon.style.display = 'none';
			copyConfirmationIcon.style.display = 'inline';
			
			
			// Hide the span tag after 3 seconds
			setTimeout(function() {
				copyIcon.style.display = 'inline';
				copyConfirmationIcon.style.display = 'none';
			}, 1000);
		});
	});
</script>