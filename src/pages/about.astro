---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import CopyIcon from "../components/icons/CopyIcon.astro";
import CopiedIcon from "../components/icons/CopiedIcon.astro";
import ExternalLinkIcon from "../components/icons/ExternalLinkIcon.astro";
---

<Layout title="Max Georgopoulos">
  <main class="col-span-full flex flex-col gap-12 px-6 pb-24 sm:px-12">
    <Header link={{ text: "Resume", href: "/resume-max-georgopoulos.pdf" }} />
    <div class="flex flex-col gap-12 lg:grid lg:grid-cols-12">
      <img
        src="/me.jpeg"
        alt="my face"
        class="col-span-4 mx-auto aspect-square w-full max-w-sm xl:col-span-3"
      />
      <div
        class="col-span-8 flex flex-col justify-between gap-12 xl:col-span-9 xl:flex-row"
      >
        <p class="mx-auto -my-1 max-w-prose lg:mx-0 xl:basis-2/3">
          Yo! I'm a designer and developer based out of Toronto, but I bum
          around different places. I believe that the boundary between design
          and engineering is artificial — you get the best results by blending
          the two. Lately, I've been inspired by Ryan Singer's design
          techniques, TailwindCSS, and The 2023 Spring Summer Collection from
          Homme Plissé.
        </p>
        <div class="flex flex-col xl:basis-1/3">
          <a
            href="https://www.are.na/max-georgopoulos"
            target="_blank"
            class="flex w-full items-center justify-between border-t py-1 hover:underline dark:border-[#303236]"
          >
            Arena
            <ExternalLinkIcon classes="mt-0.5 -mr-[3px]" />
          </a>
          <a
            href="https://github.com/maxgeor"
            target="_blank"
            class="flex w-full items-center justify-between border-t py-1 hover:underline dark:border-[#303236]"
          >
            Github
            <ExternalLinkIcon classes="mt-0.5 -mr-[3px]" />
          </a>
          <a
            href="https://twitter.com/maxoulos"
            target="_blank"
            class="flex w-full items-center justify-between border-t py-1 hover:underline dark:border-[#303236]"
          >
            Twitter
            <ExternalLinkIcon classes="mt-0.5 -mr-[3px]" />
          </a>
          <a
            href="https://dribbble.com/maxgeo"
            target="_blank"
            class="flex w-full items-center justify-between border-t py-1 hover:underline dark:border-[#303236]"
          >
            Dribbble
            <ExternalLinkIcon classes="mt-0.5 -mr-[3px]" />
          </a>
          <a
            href="https://www.linkedin.com/in/max-georgopoulos-109095136/"
            target="_blank"
            class="flex w-full items-center justify-between border-t py-1 hover:underline dark:border-[#303236]"
          >
            LinkedIn
            <ExternalLinkIcon classes="mt-0.5 -mr-[3px]" />
          </a>
          <button
            id="email"
            class="group flex w-full cursor-pointer items-center justify-between border-y py-1 dark:border-[#303236]"
          >
            <span class="flex gap-px group-hover:underline"
              >max123358 <code>@</code>gmail.com</span
            >
            <CopyIcon id="copyIcon" classes="-mr-[3px]" />
            <CopiedIcon id="copiedIcon" classes="hidden -mr-[3px]" />
          </button>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const email = document.querySelector("#email") as HTMLElement;

    email?.addEventListener("click", () => {
      navigator.clipboard.writeText(email.innerText);

      const copyIcon = document.querySelector("#copyIcon") as HTMLElement;
      const copiedIcon = document.querySelector("#copiedIcon") as HTMLElement;
      copyIcon.style.display = "none";
      copiedIcon.style.display = "inline";

      setTimeout(() => {
        copyIcon.style.display = "inline";
        copiedIcon.style.display = "none";
      }, 1000);
    });
  });
</script>
