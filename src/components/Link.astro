---
export interface Props {
  type: "project" | "writing";
  href: string;
  title: string;
  description: string;
  externalLink?: boolean;
}

const { type, href, title, description, externalLink = false } = Astro.props;
---

<a
  href={href}
  target={externalLink ? "_blank" : "_self"}
  class={`
		border-t first:border-t-0  group relative col-span-full lg:col-span-6 flex items-baseline justify-between sm:gap-x-12 py-1 first:pt-0 last:pb-0  
	`}
>
  <p
    class={`
		${type === "writing" ? "xs:basis-1/2" : "basis-1/2"}
		 group-hover:underline pr-6 sm:pr-0
	`}
  >
    {title}
  </p>
  <p
    class={`
		${type === "writing" ? "text-[13px] xs:basis-1/2" : "basis-1/2"}
		 text-gray-500 dark:text-neutral-500 
	`}
  >
    {description}
  </p>
</a>
