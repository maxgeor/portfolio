---
export interface Props {
  type: "project" | "writing";
  href: string;
  title: string;
  description: string;
  externalLink?: boolean;
}

const { type, href, title, description, externalLink = false } = Astro.props;
---

<a
  href={href}
  target={externalLink ? "_blank" : "_self"}
  class={`
		 group relative -my-1
	`}
>
  <p class={`group-hover:underline`}>{title}</p>
  <p
    class={`
		${type === "writing" ? "text-[13px] xs:basis-1/2" : "basis-1/2"}
		 text-neutral-500 dark:text-neutral-490 
	`}
  >
    {description}
  </p>
</a>
