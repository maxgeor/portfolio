---
export interface Props {
	href: string;
	title: string;
	description: string;
	roles: string[];
	year: number;
	image?: string;
	titleTightness?: 'normal' | 'tight';
}

const { 
	href, 
	title,
	description,
	year,
	image,
	titleTightness = 'normal',
} = Astro.props;
---
<a 
	href={href}
	class="group col-span-full col-span-1/3 flex flex-col gap-y-5 justify-between w-full transition duration-100"
>	
	<div class="flex justify-between gap-y-5 gap-x-5">
		<h2 class={`
			${titleTightness === 'tight' ? 'tracking-[-0.175em]' : null}
			font-bodoni uppercase text-4xl leading-8 -my-0.5
		`}>
			{title}
		</h2>
		<div class="relative">
			<p class="absolute right-0 top-0 group-hover:opacity-0 group-focus:opacity-0 text-[11px] leading-3 -my-0.5 tracking-wider transition-all ease-in duration-[125ms]">{year}</p>
			<svg class="-mt-[3.5px] absolute right-0 top-0 group-hover:inline-block group-focus:inline-block opacity-0 group-hover:opacity-100 group-focus:opacity-100 transform translate-x-0.5 group-hover:translate-x-1 group-focus:translate-x-1 transition-all ease-in duration-[125ms]" width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M8.14645 3.14645C8.34171 2.95118 8.65829 2.95118 8.85355 3.14645L12.8536 7.14645C13.0488 7.34171 13.0488 7.65829 12.8536 7.85355L8.85355 11.8536C8.65829 12.0488 8.34171 12.0488 8.14645 11.8536C7.95118 11.6583 7.95118 11.3417 8.14645 11.1464L11.2929 8H2.5C2.22386 8 2 7.77614 2 7.5C2 7.22386 2.22386 7 2.5 7H11.2929L8.14645 3.85355C7.95118 3.65829 7.95118 3.34171 8.14645 3.14645Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
		</div>
	</div>
	<p class="-my-1">{description}</p>
	<img src="/work/memiori/cover.png" class="sm:order-last col-span-full aspect-[2/1] object-cover w-full sm:h-full"/>
</a>
