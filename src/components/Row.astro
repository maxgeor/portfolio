---
export interface Props {
  align?: 'left' | 'right';
  isTitle?: boolean;
  classes?: string;
}

const { align = 'right', isTitle = false, classes } = Astro.props;
---

<tr class={`
  ${isTitle ? 'text-[13px] uppercase border-t-[0.5px] tracking-wider' : null} 
  ${!isTitle && (align === 'right' ? 'justify-between' : null)}
  ${classes}
  py-0.5 flex gap-x-2 w-full border-b-[0.5px] border-[#403c38]
`}>
  {isTitle ? <th class="font-normal"><slot/></th> : <slot/>}
</tr>

<style>
  th, td {
    white-space: nowrap;
    text-align: left;
  }
</style>