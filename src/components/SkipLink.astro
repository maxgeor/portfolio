---
export interface Props {
  anchor: string;
}

const { anchor } = Astro.props;

const strippedAnchor = anchor.startsWith('#') ? anchor.slice(1) : anchor;
---
<a
  id="skip-to-content"
  href={'#' + strippedAnchor}
  aria-label="Skip to main content"
  class="fixed left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 opacity-0 pointer-events-none focus:opacity-100 focus:pointer-events-auto  px-12 py-6 hover:opacity-100 hover:ring-offset-4 bg-white dark:bg-black hover:bg-white dark:hover:bg-black  focus:bg-white dark:focus:bg-black text-black dark:text-white uppercase text-[34px] leading-[28px] font-bold text-center"
>
  Skip to main content
</a>

