---
export interface Props {
	href: string;
	companyName: string;
	title: string;
	description: string;
	roles: string[];
	projectImage: string;
	textColorPrimary: string;
	textColorSecondary: string;
	backgroundColor: string;
}

const { 
	href, 
	companyName,
	title,
	description,
	roles,
	projectImage,
} = Astro.props;

