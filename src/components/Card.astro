---
export interface Props {
	href: string;
	companyName: string;
	title: string;
	description: string;
	roles: string[];
	projectImage: string;
	textColorPrimary: string;
	textColorSecondary: string;
	backgroundColor: string;
}

const { 
	href, 
	companyName,
	title,
	description,
	roles,
	projectImage,
} = Astro.props;
---

<a href={href || '#'} class={`p-6 hover:bg-[#363230] transform hover:scale-[100.5%] transition-all duration-[500ms] ease-out`}>
	<p class={`text-[#918C88] mb-6 leading-3 font-ibm uppercase text-[10px] tracking-wider`}>{companyName}</p>
	<h2 class={`text-2xl leading-6 italic mb-2`}>{title}</h2>
	<p class={`font-ibm text-xs mb-2 text-stone-300`}>{description}</p>
	<div class="text-[#918C88] text-[10px] leading-4 font-ibm uppercase tracking-wider flex gap-x-1 flex-wrap">
		{roles.map((role, index) => (
			index < roles.length - 1 ? (
				<p>{role}</p>
				<span class="text-stone-600">/</span>
				) : (
					<p>{role}</p>
					)
					))}
		</div>
	<img src="Frame-168.png" alt="" class="max-h-[300px] w-auto mt-6"/>
</a>