---
import Link from './Link.astro';
export interface Props {
  goBackPath?: string;
  classes?: string;
}

const { classes = "" } = Astro.props;
---
<header class={`top-2 uppercase fixed left-3 right-3 bottom-auto z-50 col-span-full grid grid-cols-12 gap-x-3 gap-y-3 ${classes}`}>
  <Link href="/" classes="block col-span-3 xl:col-span-1 mix-blend-exclusion uppercase">Mkcg</Link>
  <div class="flex gap-2 whitespace-nowrap col-span-3 xl:col-span-8 ">
    <Link href="/" classes=" w-fit">Work</Link>
    <Link href="/writing" classes="w-fit col-span-2 mix-blend-exclusion">Writing</Link>
  </div>
  <Link href="/info" classes="col-span-3 justify-self-end w-fit">Info</Link>
</header>