---
import Link from './Link.astro';
export interface Props {
  goBackPath?: string;
  classes?: string;
}

const { classes = "" } = Astro.props;
---
<header class={`top-2 fixed left-4 right-4 bottom-auto z-50 col-span-full grid grid-cols-12 gap-x-4 gap-y-4 ${classes}`}>
  <Link href="/" classes="block col-span-4 md:col-span-3 mix-blend-exclusion uppercase">Mkcg</Link>
  <div class="flex gap-2 whitespace-nowrap col-span-4 md:col-span-5 ">
    <Link href="/" classes=" w-fit">Work</Link>
    <Link href="/writing" classes="w-fit col-span-2 mix-blend-exclusion">Writing</Link>
  </div>
  <Link href="/info" classes="col-span-4 justify-self-end w-fit">Info</Link>
</header>