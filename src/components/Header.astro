---
import ThemeButton from "./ThemeButton.astro";
import UpRightArrowIcon from "./icons/UpRightArrowIcon.astro";

export interface Props {
  link?: {
    text: string;
    href: string;
    classes?: string;
    isExternal?: boolean;
  }[];
  classes?: string;
}

const { links, classes = "" } = Astro.props;
---

<header
  class={`
    relative col-span-full grid grid-cols-2 md:grid-cols-4 gap-6 pt-3 sm:pt-5
    ${classes}
  `}
>
  <div class="flex items-center justify-between gap-4">
    <a href="/" class="hover:underline">Max Georgopoulos</a>
  </div>

  <select class=" col-start-3 bg-transparent w-fit -ml-1">
    <option>Work</option>
    <option>Writing</option>
    <option>About</option>
  </select>
  <!-- {
    links ? links.map((link) =>
      <a
        href={link.href}
        target={link.isExternal ? "_blank" : undefined}
        class={`hidden md:flex items-center gap-[3px] hover:underline ${link.classes}`}
      >
        {link.text}
        {link.isExternal ? (
          <UpRightArrowIcon classes="mt-0.5 -mr-[3px]" />
        ) : null}
      </a>
      ) : null
    } -->
  <ThemeButton classes="absolute top-[18px] sm:top-[26px] right-0" />
</header>
