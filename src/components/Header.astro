---
import ThemeButton from "./ThemeButton.astro";
import UpRightArrowIcon from "./icons/UpRightArrowIcon.astro";

export interface Props {
  link?: {
    text: string;
    href: string;
    classes?: string;
    isExternal?: boolean;
  };
  classes?: string;
}

const { link, classes = "" } = Astro.props;
---

<header
  class={`
    relative col-span-full flex items-center justify-between sm:grid grid-cols-4 gap-6 pt-3 sm:pt-5
    ${classes}
  `}
>
  <div class="flex items-center justify-between gap-4">
    <a href="/" class="hover:underline">Max Georgopoulos</a>
  </div>

  <div
    class={`${
      !link && "justify-self-end"
    } lg:col-start-2 col-end-5 flex items-center justify-end lg:justify-between gap-3.5 sm:gap-5`}
  >
    {
      link ? (
        <>
          <a
            href={link.href}
            target={link.isExternal ? "_blank" : undefined}
            class={`items-center gap-[3px] hover:underline lg:flex ${link.classes}`}
          >
            {link.text}
            {link.isExternal ? (
              <UpRightArrowIcon classes="mt-0.5 -mr-[3px]" />
            ) : null}
          </a>
        </>
      ) : null
    }
    <ThemeButton />
  </div> 
  
</header>
