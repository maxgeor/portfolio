---
import ThemeButton from "./ThemeButton.astro";
import ExternalLinkIcon from "./icons/ExternalLinkIcon.astro";

export interface Props {
  link?: {
    text: string;
    href: string;
    classes?: string;
    isExternal?: boolean;
  };
  classes?: string;
}

const { link, classes = "" } = Astro.props;
---

<header
  class={`
    relative col-span-full flex items-center justify-between xl:grid grid-cols-12 gap-6 md:gap-12 pt-6 sm:pt-12 -my-1
    ${classes}
  `}
>
  <div class="col-span-4 flex items-center justify-between gap-6 sm:gap-12">
    <a href="/" class="hover:underline">Max Georgopoulos</a>
  </div>
  <div
    class={`${
      !link && "justify-self-end"
    } xl:col-start-9 col-end-13 flex items-center justify-between gap-6`}
  >
    {
      link ? (
        <>
          <a
            href={link.href}
            target={link.isExternal ? "_blank" : undefined}
            class={`items-center gap-[3px] hover:underline lg:flex ${link.classes}`}
          >
            {link.text}
            {link.isExternal ? (
              <ExternalLinkIcon classes="mt-0.5 -mr-[3px]" />
            ) : null}
          </a>
        </>
      ) : null
    }
    <ThemeButton />
  </div>
</header>
