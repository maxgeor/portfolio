---
export interface Props {
  title: string;
  direction?: 'left' | 'right';
  classes?: string;
}

const { title, direction = 'left', classes = '' } = Astro.props;
---

<div class={`
  scrolling-banner absolute top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2 z-10 bg-white marquee
  ${classes}
`}>
  <div class={`text ${direction === 'left' ? 'scroll-left' : 'scroll-right'}`}>
    {Array.from({ length: 20 }, (_) => (
      <span>{title}</span>
    ))}
  </div>
  <div class={`text ${direction === 'left' ? 'scroll-left' : 'scroll-right'}`}>
    {Array.from({ length: 20 }, (_) => (
      <span>{title}</span>
    ))}
  </div>
</div>
<style>
  .scrolling-banner {
    width: calc(100% + 32px);
    overflow: hidden;
    display: flex;
    white-space: nowrap;
  }

  .text {
    font-size: inherit;
    line-height: 12px;
  }

  .text span {
    margin-right: 5px;
  }

  .text.scroll-left {
    animation: animate_text_left 150s linear infinite;
  }

  .text.scroll-right {
    animation: animate_text_right 150s linear infinite;
  }

  @keyframes animate_text_left {
    from {
      transform: translate3d(0, 0, 0);
    }
    to {
      transform: translate3d(-100%, 0, 0);
    }
  }
  @keyframes animate_text_right {
    from {
      transform: translate3d(0, 0, 0);
    }
    to {
      transform: translate3d(100%, 0, 0);
    }
  }
</style>