---
export interface Props {
	href: string;
	type: string;
	title: string;
	description: string;
	roles: string[];
	textColorPrimary: string;
	textColorSecondary: string;
	backgroundColor: string;
	image: string;
}

const { 
	href, 
	type,
	title,
	description,
	roles,
	image,
} = Astro.props;
---

<a href={href || '#'} class={`flex flex-col items-start p-6 hover:bg-[#2f2f2f] transform hover:scale-[100.5%] transition-all duration-[500ms] ease-out`}>
	<div class="w-full">
		<div class="flex flex-col xs:flex-row-reverse lg:flex-col xs:justify-between lg:justify-start gap-y-6 mb-2">
			<p class={` leading-3 font-ibm uppercase text-[10px] tracking-wider`}>{type}</p>
			<h2 class={`text-2xl leading-6 italic`}>{title}</h2>
		</div>
		<div class="mr-6 md:mr-0">
			<p class={`font-ibm text-xs mb-2`}>{description}</p>
			<div class=" text-[10px] leading-4 font-ibm uppercase tracking-wider flex gap-x-1 flex-wrap">
				{roles.map((role, index) => (
					index < roles.length - 1 ? (
						<p>{role}</p>
						<span class="">/</span>
						) : (
							<p>{role}</p>
						)
					 )
				)}
				</div>
		</div>
	</div>
	{image ? (
		<img src={image || "Frame-168.png"} alt="" class="max-h-[300px] w-auto mt-6"/>
	) : (
		<div class="h-[300px] w-full mt-6 bg-[#3d3d3d]"></div>
	)}
</a>