---
export interface Props {
  id?: string;
  size?: 'tiny' | 'base'; 
  classes?: string;
}

const { id = "", size = "base", classes = "" } = Astro.props;
---
{size === "tiny" ? (
  <svg id={id}
    class={classes} width="7" height="7" viewBox="0 0 7 7" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path fill-rule="evenodd" clip-rule="evenodd" d="M3.93122 0.431458L6.99978 3.50001L3.93122 6.56856L3.22412 5.86146L5.08556 4.00001L0 4V3L5.08556 3.00001L3.22412 1.13856L3.93122 0.431458Z" fill="currentColor"/>
  </svg>
) : (
  <svg 
    id={id}
    class={classes} 
    width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg"
  >
    <path fill-rule="evenodd" clip-rule="evenodd" d="M8.21722 3L12 6.95356L8.12837 11L7.43717 10.2776L10.1288 7.5H3V6.5H10.1288L7.52602 3.72241L8.21722 3Z" fill="currentColor"/>
  </svg>

)}