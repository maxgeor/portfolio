    id={id}
    class={classes}
    width="7" 
    height="7" 
    viewBox="0 0 7 7" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M1.46084 6.47189L0.726532 5.73758L4.41197 2.04866H1.61397L1.62092 1.03943H6.15551V5.5775H5.13932L5.14627 2.78297L1.46084 6.47189Z" fill="currentColor"/>
  </svg>
) : (
  <svg id={id}
    class={classes} width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" clip-rule="evenodd" d="M4.89851 4H11V10.0828H9.98307L9.9831 5.78063L4.66157 11L3.91724 10.319L9.15266 5.01379H4.89851V4Z" fill="currentColor"/>
  </svg>
)}
