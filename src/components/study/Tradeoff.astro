---
import { marked } from 'marked';
import Image from './Image.astro';

export interface Props {
  title: string;
  image?: {
    src: string;
    alt: string;
    hasBorder?: boolean;
  }
}

const { title, image } = Astro.props;
---

<div class="!col-span-full grid grid-cols-16 gap-x-2 ">
  <div class="col-span-full lg:col-span-4 hidden lg:block mb-5">
    <h3 class=" text-[19px] leading-5 md:text-[24px] md:leading-[25px]">Tradeoff</h3>
  </div>
  
  <div class={`
    col-span-full flex flex-col gap-2
    ${image ? 'md:col-span-6 lg:col-span-4 ' : 'md:col-span-12 lg:col-span-8'}
    `}>
    <h4 set:html={marked.parse(`Tradeoff: ${title}`)} class="lg:hidden"></h4>
    <h4 set:html={marked.parse(title)} class="hidden lg:block"></h4>
    <div class=" flex flex-col text-justify hyphens-auto normal-case">
      <slot />
    </div>
  </div>
  {image && (
    <Image
      src={image.src}
      alt={image.src}
      span={{ base: 12 }}
      hasCaption={false}
      hasBorder={image.hasBorder}
      classes="self-center col-span-full md:col-span-9 lg:col-span-7 lg:col-start-10 mt-15 md:mt-0"
    />
  )}
  
</div>
