---
import { marked } from 'marked';
import Image from './Image.astro';

export interface Props {
  title: string;
  image?: {
    src: string;
    alt: string;
    id: string;
    hasBorder?: boolean;
  }
}

const { title, image } = Astro.props;
---

<div class="!col-span-full grid grid-cols-16 gap-x-15 ">
  <h3 class="col-span-full lg:col-span-2 text-balance hidden lg:block lg:max-w-[20ch] mb-5" set:html={marked.parse(title)}></h3>
  <div class="col-span-full lg:col-span-3 flex flex-col gap-5 mb-15">
    <h3 class="text-pretty lg:hidden" set:html={marked.parse(title)}></h3>
    <div class=" flex flex-col text-balance normal-case">
      <slot />
    </div>
  </div>
  {image && (
    <Image
      id='T1'
      src={image.src}
      alt={image.src}
      span={{ base: 12 }}
      hasCaption={false}
      hasBorder={image.hasBorder}
      classes="self-center col-span-full lg:col-span-9"
    />
  )}
</div>
