---
export interface Props {
  title: string;
  number: string;
  classes?: string;
}
const { title, number, classes = ""} = Astro.props;
---
<div class={`
  relative col-span-full pt-12 md:pt-36 -my-1 sm:-my-2 xl:-my-3
  ${classes}
`}>
  <div class="relative grid grid-cols-6 xl:grid-cols-8 gap-y-6 gap-x-12 border-t border-neutral-600 pt-2">
    <h1 class="col-span-5 xl:col-start-2 max-w-[12ch] -ml-0.5 md:-ml-1 lg:-ml-1.5 ">{title}</h1>
    <span class="text-xl sm:text-2xl lg:text-3xl -mr-0.5 sm:-mr-1  justify-self-end text-neutral-600 tracking-tight">
      {number}
    </span>
  </div>
  <slot />
</div>