---
export interface Props {
  title: string;
  number: string;
  classes?: string;
}
const { title, number, classes = ""} = Astro.props;
---
<div class={`
   col-span-full pt-36 md:pb-12 -my-2 xl:-my-3
  ${classes}
`}>
  <div class="relative grid grid-cols-6 xl:grid-cols-8 gap-y-6 gap-x-12 border-t-[0.5px] pt-2">
    <h1 class="col-span-5 xl:col-start-2 max-w-[12ch] -ml-0.5 md:-ml-1.5 ">{title}</h1>
    <span class="text-xl sm:text-2xl xl:text-3xl -mr-0.5 md:-mr-2 justify-self-end text-neutral-600 tracking-tight">
      {number}
    </span>
  </div>
  <slot />
</div>