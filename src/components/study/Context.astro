---
export interface Props {
  title?: string
}

const { title } = Astro.props;
---
<!-- <div class="relative flex flex-col col-span-full gap-y-[5px] gap-x-[15px] border-t border-gray-200 dark:border-black first:border-none pt-[15px] lg:first:pt-0 -mx-[15px] 3xl:mx-0 px-[15px] 3xl:px-0" > -->
<div class="relative flex flex-col col-span-full gap-y-[5px] gap-x-[15px] border-t border-gray-200 dark:border-black first:border-none  lg:first:pt-0 -mx-[15px] 3xl:mx-0 px-[15px] 3xl:px-0" >
  {title && <h1 class="uppercase text-pretty ">{title}</h1>}
  <p class="break-words hyphens-auto tracking-[-0.0075em] text-[20px] leading-[20px] xl:text-[24px] xl:leading-[25px]  ">
    <slot />
  </p>
</div>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: inherit;
  }

  p > mark.solution::before {
    content: '';
    display: inline-block;
    height: 18px;
    width: 18px;
    margin-right: 6px;
    vertical-align: baseline;
    background-color: rgb(255, 49, 207);
  }

@media (max-width: 1279px) {
  p > mark.solution::before {
    height: 15px;
    width: 15px;
    margin-right: 5px;
  }
}
</style>
