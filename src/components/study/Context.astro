---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---

<Grid classes="!gap-x-4 !gap-y-0" >
  {title && <h1 class="md:max-w-[30ch] col-span-full border-b md:border-none border-black md:col-span-2 mb-1 text-pretty">{title}</h1>}
  <p class="normal-case	font-medium lg:tracking-[-0.015em] col-span-full md:col-span-9 max-w-prose text-[24px] md:text-[28px] xl:text-[32px] xl:leading-[32px] 2xl:text-[44px] 2xl:leading-[44px] leading-6 md:leading-[28px]  ">
    <slot />
  </p>
</Grid>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: inherit;
  }

  p > mark.solution::before {
    content: '';
    display: inline-block;
    height: 23px;
      width: 23px;
    /* border-radius: 9999px; */
    margin-right: 10px;
    vertical-align: baseline;
    background-color: #FF58F4;
  }

  @media (max-width: 1023px) {
    p > mark.solution::before {
      height: 20px;
      width: 20px;
      margin-right: 8px;
    }
  }
</style>
