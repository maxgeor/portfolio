---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---
<div class="relative flex flex-col col-span-full gap-y-1 gap-x-3 border-t first:border-none pt-3 md:first:pt-0 -mx-3 2xl:mx-0 px-3 2xl:px-0" >
  {title && <h1 class="uppercase text-pretty">{title}</h1>}
  <p class="break-words hyphens-auto tracking-[-0.0125em] text-[20px] leading-5 max-w-[80ch]">
    <slot />
  </p>
</div>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: inherit;
  }

  p > mark.solution::before {
    content: '';
    display: inline-block;
    height: 15px;
    width: 15px;
    margin-right: 6px;
    vertical-align: baseline;
    background-color: rgb(255, 49, 207);
  }
</style>
