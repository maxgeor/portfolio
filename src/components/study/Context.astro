---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---
<!-- <div class="relative grid grid-cols-9 col-span-full !gap-x-3 !gap-y-0 border-t border-neutral-300 md:first:border-none pt-6 md:first:pt-0 px-3 -mx-3 2xl:px-0 2xl:mx-0" > -->
<div class="relative grid grid-cols-9 col-span-full !gap-x-3 !gap-y-0 border-t border-neutral-250 first:border-none pt-3 md:first:pt-0 -mx-3 px-3" >
  {title && <h1 class="col-span-full  uppercase  text-pretty mb-1 ">{title}</h1>}
  <p class="break-words hyphens-auto tracking-[-0.0125em] col-span-full text-[20px] leading-5">
    <slot />
  </p>
</div>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: inherit;
  }

  p > mark.solution::before {
    content: '';
    display: inline-block;
    height: 14px;
    width: 14px;
    margin-right: 6px;
    vertical-align: baseline;
    background-color: rgb(255, 49, 207);
  }
</style>
