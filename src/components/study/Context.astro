---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---

<Grid gap={{ y: 0, x: 16 }}>
  {title && <h1 class="uppercase col-span-9 col-start-1 md:col-start-3 col-end-[-1] pb-2 text-balance">{title}</h1>}
  <p class="lg:tracking-[-0.005em] col-span-full text-[28px] leading-[28px] lg:text-[37px] lg:leading-[37px] 2xl:text-[48px] 2xl:leading-[48px] ">
    <slot />
  </p>
</Grid>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: inherit;
  }

  p > mark.solution::before {
    content: '';
    display: inline-block;
    height: 26px;
    width: 26px;
    border-radius: 9999px;
    margin-right: 10px;
    vertical-align: baseline;
    background-color: #776355;
  }

  @media (max-width: 1023px) {
    p > mark.solution::before {
      height: 20px;
      width: 20px;
      margin-right: 8px;
    }
  }
</style>
