---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---

<Grid 
  gap={{ y: 8, x: 16 }} 
  classes="first:mt-0 mt-20 mb-16"
>
  {title && <h1 class="col-span-9 col-start-2 xl:col-start-3 uppercase">{title}</h1>}
  <p class="col-span-full text-[28px] leading-[28px] lg:text-[38px] lg:leading-[40px] text-[#636363] tracking-[-0.0425em]">
    <slot />
  </p>
</Grid>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: #C5C5C5;
  }
</style>
