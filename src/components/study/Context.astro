---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---

<Grid gap={{ y: 8, x: 16 }} classes="mt-20 mb-16">
{title && <h1  class="uppercase col-span-9 col-start-2 xl:col-start-3">{title}</h1>}
<p class="tracking-[-0.01em] col-span-full text-[28px] leading-[28px] lg:text-[38px] lg:leading-[40px] 2xl:text-[48px] 2xl:leading-[48px] ">
    <slot />
  </p>
</Grid>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: #fff;
  }
  
  p > mark.solution {
  }
</style>
