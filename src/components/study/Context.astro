---
export interface Props {
  title?: string
}

const { title } = Astro.props;
---
<div class="grid grid-cols-16 !col-span-full gap-y-5 lg:mt-30" >
  {title && <h1 class="text-pretty col-span-full lg:col-span-2 lg:pr-30">{title}</h1>}
  <p class="col-span-full lg:col-span-12 break-words hyphens-auto tracking-[-0.0075em] text-[19px] leading-[20px] lg:text-[24px] lg:leading-[25px] 2xl:text-[35px] 2xl:leading-[35px]">
    <slot />
  </p>
</div>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: inherit;
  }

  p > mark.solution::before {
    content: '';
    display: inline-block;
    height: 25px;
    width: 25px;
    margin-right: 9px;
    vertical-align: baseline;
    background-color: var(--accent-color);
  }

  @media (max-width: 1599px) {
    p > mark.solution::before {
      height: 17px;
      width: 17px;
      margin-right: 6px;
    }
  }

  @media (max-width: 1023px) {
    p > mark.solution::before {
      height: 14px;
      width: 14px;
      margin-right: 5px;
    }
  }
</style>
