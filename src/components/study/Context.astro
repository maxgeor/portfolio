---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---

<div class="relative grid grid-cols-9 col-span-full !gap-x-3 !gap-y-0  border-t border-[#dddee2] first:border-none pt-6 first:pt-0 " >
  <!-- {title && <h1 class="xl:absolute xl:w-[calc((100vw-24px-132px)/12)] max-w-[60px] xl:-left-[calc((100vw-24px-132px)/12)] col-span-full  uppercase  text-pretty mb-1 xl:mb-0">{title}</h1>} -->
  {title && <h1 class="col-span-full  uppercase  text-pretty mb-1 ">{title}</h1>}
  <p class="break-words hyphens-auto tracking-[-0.0125em] col-span-full text-[23px] leading-6  ">
    <slot />
  </p>
</div>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: inherit;
  }

  p > mark.solution::before {
    content: '';
    display: inline-block;
    height: 14px;
    width: 14px;
    margin-right: 7px;
    vertical-align: baseline;
    background-color: green;
  }
</style>
