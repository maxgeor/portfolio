---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---

<Grid classes="!gap-x-4 !gap-y-0" >
  {title && <h1 class="md:max-w-[25ch] 2xl:max-w-[40ch] col-span-full border-b md:border-none border-black/80 md:col-span-2 mb-1 text-pretty">{title}</h1>}
  <p class="break-words hyphens-auto tracking-[-0.0075em] 2xl:tracking-[-0.015em] col-span-full md:col-span-8  max-w-[80ch] text-[20px] leading-5 md:text-[24px] 2xl:text-[32px] sm:leading-6 2xl:leading-8 ">
    <slot />
  </p>
</Grid>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: inherit;
  }

  p > mark.solution::before {
    content: '';
    display: inline-block;
    height: 14px;
    width: 14px;
    margin-right: 7px;
    vertical-align: baseline;
    background-color: green;
  }

