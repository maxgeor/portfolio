---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---

<Grid gap={{ y: 8, x: 16 }}>
  {title && <h1 class="col-span-3 col-start-3">{title}</h1>}
  <p class="col-span-full text-[24px] leading-[24px] sm:text-[34px] sm:leading-[36px] text-[#636363] tracking-[-0.0425em]">
    <slot />
  </p>
</Grid>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: #C5C5C5;
    font-weight: 400;
  }
</style>