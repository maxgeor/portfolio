---
import Grid from '../Grid.astro';

export interface Props {
  title?: string
}

const { title } = Astro.props;
---

<Grid gap={{ y: 0, x: 16 }}>
  {title && <h1 class="uppercase col-span-9 col-start-1 md:col-start-3 pb-2 text-balance">{title}</h1>}
  <p class="tracking-[-0.01em] col-span-full text-[28px] leading-[28px] lg:text-[37px] lg:leading-[37px] 2xl:text-[48px] 2xl:leading-[48px] ">
    <slot />
  </p>
</Grid>

<style is:inline>
  p > mark {
    background-color: transparent;
    color: inherit;
  }
</style>
