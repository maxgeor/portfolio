---
export interface Props {
  classes?: string;
}
const { classes = "" } = Astro.props;
---

<div class={`
  grid grid-cols-1 sm:grid-cols-6 xl:grid-cols-8 sm:gap-y-2 gap-x-6 col-span-full sm:tracking-[-0.04em] -my-1
  ${classes}
`}>
  <div class="flex gap-1.5 sm:gap-4 col-span-full lg:col-span-2 xl:col-start-2 text-neutral-500 text-sm sm:text-md ">
    <span class="font-inter text-[13.5px] sm:text-[19px]">1.</span>
    <slot name="1" />
  </div>
  <div class="flex gap-1.5 sm:gap-4 col-span-full lg:col-span-2 text-neutral-500 text-sm sm:text-md ">
    <span class="font-inter text-[13.5px] sm:text-[19px]">2.</span>
    <slot name="2" />
  </div>
  <div class="flex gap-1.5 sm:gap-4 col-span-full lg:col-span-2 text-neutral-500 text-sm sm:text-md ">
    <span class="font-inter text-[13.5px] sm:text-[19px]">3.</span>
    <slot name="3" />
  </div>
</div>