---
import Section from './Section.astro';

export interface Props {
  problem: string, 
  solution: string,
  decisions: string[],
  tradeoffs: string[],
}
const { problem, solution, decisions, tradeoffs } = Astro.props;
---
<Section title="Tldr" classes='leading-5 not-prose gap-4 bg-neutral-900 -mx-4 px-4 py-8 '>
  <div class="grid grid-cols-8 md:grid-cols-6 md:col-start-3 col-span-full gap-4">
    <div class="flex gap-4 col-span-full border-t border-white/[25%]">
      <p class="basis-1/4 md:basis-1/3">Problem</p>
      <p>{problem}</p>
    </div>
    <div class="flex gap-4 col-span-full border-t border-white/[25%]">
      <p class="basis-1/4 md:basis-1/3">Solution</p>
      <p class="md:col-start-4 col-span-full">{solution}</p>
    </div>
    <div class="flex gap-4 col-span-full border-t border-white/[25%]">
      <p class="basis-1/4 md:basis-1/3">Decisions</p>
      <ul class="md:col-start-4 col-span-full">
        {decisions.map((decision) => (
          <li class="relative block before:absolute before:-left-[17px] pl-0.5 before:-top-0.5 before:rounded-full before:text-[24px] before:content-['•']">
            {decision}
          </li>
        ))}
      </ul>
    </div>
    <div class="flex items-start gap-4 col-span-full border-t border-white/[25%]">
      <p class="basis-1/4 md:basis-1/3">Tradeoffs</p>
      <ul class="">
        {tradeoffs.map((tradeoff) => (
          <li class="relative block before:absolute before:-left-[17px] pl-0.5 before:-top-0.5 before:rounded-full before:text-[24px] before:content-['•']">
            {tradeoff}
          </li>
        ))}
      </ul>
    </div>
  </div>
  
