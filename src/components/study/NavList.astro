---
import NavItem from './NavItem.astro'

export interface Props {
  sections: {
    title: string;
    subsections?: {
      title: string;
    }[];
  }[];
  isSubsection?: boolean;
  id?: string;
  classes?: string;
}

const { sections, isSubsection = false, id, classes = '' } = Astro.props;
---

<ol
  id={id}
  class={`
  nav-list flex flex-col  transform max-w-[375px]
  ${isSubsection 
    ? "pl-0 whitespace-normal -mt-[10px] font-normal" 
    : "gap-y-4 whitespace-nowrap !text-neutral-100"
  }
  ${classes}
`}
>
  {sections.map((section) => (
    <NavItem
      title={section.title}
      subsections={section.subsections}
      isSubitem={isSubsection}
    />
  ))}
</ol>
