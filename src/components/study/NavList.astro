---
import NavItem from './NavItem.astro'

export interface Props {
  sections: {
    title: string;
    subsections?: {
      title: string;
    }[];
  }[];
  isSubsection?: boolean;
  classes?: string;
}

const { sections, isSubsection = false, classes = '' } = Astro.props;
---

<ol
  class={`
  nav-list flex flex-col transition transform max-w-[230px]
  ${isSubsection 
    ? "pl-4 whitespace-normal -mt-1 mb-1" 
    : "gap-y-2 whitespace-nowrap"
  }
  ${classes}
`}
>
  {sections.map((section) => (
    <NavItem
      title={section.title}
      subsections={section.subsections}
      isSubitem={isSubsection}
    />
  ))}
</ol>
