---
export interface Props {
  src: string;
  alt: string;
  classes?: string;
}
const { src, alt, classes = ""} = Astro.props;
---
<figure 
  class={`
  relative h-0 w-full pt-[calc(4/7*100%)] select-none 
  ${classes}
`}
>
  <img
    src={src}
    alt={alt}
    class='aspect-[7/4] absolute inset-0 h-full w-full object-cover'
  />
</figure>
