---
export interface Props {
  src: string;
  alt: string;
  classes?: string;
}
const { src, alt, classes = ""} = Astro.props;
---
<figure 
  class={`
  relative select-none  bg-neutral-800 self-center
  ${classes}
`}
>
  <img
    src={src}
    alt={alt}
    class='h-full w-full object-cover'
  />
</figure>
