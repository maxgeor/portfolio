---
import RightArrowIcon from './icons/UpRightArrowIcon.astro';
import UpRightArrowIcon from './icons/UpRightArrowIcon.astro';
import ComingSoonBanner from './ComingSoonBanner.astro'

export interface Props {
  title: string;
  description: string;
  image: string;
  link?: {
    href: string;
    target?: '_blank' | '_self';
  };
  studySlug?: string;
  isComingSoon?: boolean;
  classes?: string;
}

const { 
  link,
  title, 
  description, 
  image,
  studySlug,
  classes = '',
  isComingSoon = false,
} = Astro.props;

const rightArrowIconClasses = `inline shrink-0 mr-[4px] -ml-px mb-0.5 ${isComingSoon ? 'opacity-50' : ''}`;
const upRightArrowIconClasses = `inline -ml-px mr-[4px] mb-0.5 ${isComingSoon ? 'opacity-50' : ''}`;
---
{isComingSoon ? (
  <div
    class={`
      group col-span-full xl:col-span-1 group overflow-hidden relative  gap-x-4 h-fit cursor-not-allowed border-t border-neutral-700
      ${classes} 
    `}
  >
    <ComingSoonBanner classes='transform -rotate-12' />
    <div class="grid grid-cols-12 md:grid-cols-6 gap-x-4 py-1">
      <h3 aria-label={`${title} (coming soon)`} class="col-span-6 md:col-span-2">
        {studySlug 
          ? <RightArrowIcon classes={rightArrowIconClasses} /> 
          : <UpRightArrowIcon classes={upRightArrowIconClasses} />
        }
        <span>{title}</span>
      </h3>
      <p class="col-span-6 md:col-start-3 md:col-span-4">{description}</p>
    </div>
    <picture class='relative h-auto group-hover:blur-[2px] transition duration-300'>
      <img
        src={image}
        alt={`Preview mockup of ${title}`}
        class='w-full h-full object-top select-none object-contain '
      />
    </picture>
  </div>
) : (
  <a
    href={link?.href || '#'}
    target={link?.target || '_self'}
    class={`
      group col-span-full xl:col-span-1 group overflow-hidden relative flex flex-col gap-x-4 h-fit border-t border-neutral-700
      ${classes} 
    `}
  >
  <div class="grid grid-cols-12 md:grid-cols-6 gap-4 py-1 group-hover:bg-neutral-750">
    <h3 aria-label={title} class="col-span-6 md:col-span-2">
      {studySlug 
          ? <RightArrowIcon classes={rightArrowIconClasses} /> 
          : <UpRightArrowIcon classes={upRightArrowIconClasses} />
        }
      <span>{title}</span>
    </h3>
    <p class="col-span-6 md:col-start-3 md:col-span-4">{description}</p>
  </div>
    <picture class='relative h-auto'>
      <img
        src={image}
        alt={`Preview mockup of ${title}`}
        class='w-full h-full object-top select-none object-contain'
      />
    </picture>
  </a>
)}