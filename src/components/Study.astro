---

import RightArrowIcon from './icons/RightArrowIcon.astro';

export interface Props {
  title: string;
  description: string;
  image: string;
  roles: string[];
  year: string;
  link: {
    href: string;
    target?: '_blank' | '_self';
  };
  isComingSoon?: boolean;
  classes?: string;
}

const { 
  link, 
  title, 
  description, 
  image, 
  roles = [], 
  year = '2023',
  isComingSoon = false,
  classes = '' 
} = Astro.props;
---

<a
  href={isComingSoon ? '#' : link.href}
  target={link.target || '_self'}
  class={`
    group relative gap-x-6 grid grid-cols-2 lg:grid-cols-4 h-fit break-inside-avoid-column border-t border-neutral-700 col-span-full
    ${isComingSoon && 'cursor-default'}
    ${classes} 
  `}
>
  <p class="lg:order-1">
    {title}
    {isComingSoon && (
      <span class="md:hidden ml-px text-neutral-500 dark:text-neutral-400 my-0.5 leading-4">
        (Coming soon)
      </span>
    )}
  </p>
  <p class="lg:order-4 ">{year}</p>
  <p class="lg:order-2 my-0.5 leading-4 ">{description}</p>
  <p class="lg:order-3 capitalize  leading-4 my-0.5">{roles.join(', ')}</p>
  <div class="hidden md:block z-5 absolute top-0 right-0">
    {isComingSoon ? (
      <div 
        id={`coming-soon-letters-for-${title}`} 
        class="flex bg-clip-text text-transparent text-neutral-500 dark:text-neutral-400 transition ease-in-out group-hover:text-neutral-50 group-hover:rotate-1"
      >
        <span class="wave">C</span>
        <span class="wave">o</span>
        <span class="wave">m</span>
        <span class="wave">i</span>
        <span class="wave">n</span>
        <span class="wave">g</span>
        <span class="w-1"></span>
        <span class="wave">s</span>
        <span class="wave">o</span>
        <span class="wave">o</span>
        <span class="wave">n</span>
        <span class="wave">â€¦</span>
      </div>
    ) : (
      <RightArrowIcon classes='transform group-hover:translate-x-px transition mt-1' />
    )}
  </div>
  <!-- <picture class={`
    order-last relative h-auto col-span-full aspect-[5/3] sm:aspect-[2/1] xl:aspect-[9/4] mt-2 lg:mt-5 -mx-4 sm:-mx-6
    ${!isComingSoon ? 'group-hover:brightness-[95%] transition ease-in-out' : ''}
  `}> -->
  <picture class={`
    order-last relative h-auto col-span-full mt-2 lg:mt-5 -mx-4 sm:-mx-6
    ${!isComingSoon ? 'group-hover:brightness-[95%] transition ease-in-out' : ''}
  `}>
    <img
      src={image}
      alt={`Preview mockup of ${title}`}
      class='w-full h-full object-top select-none object-cover'
    />
  </picture>
</a>

