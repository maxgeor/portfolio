---
import ComingSoonBanner from './ComingSoonBanner.astro';
export interface Props {
  title: string;
  description: string;
  image: string;
  roles: {
    long: string[],
    short: string[]
  };
  year: string;
  slug: string;
  isComingSoon?: boolean;
  link?: {
    href: string;
    target?: '_blank' | '_self';
  };
  classes?: string;
}

const { 
  link, 
  title, 
  description, 
  image,
  roles, 
  slug,
  year = '2023',
  isComingSoon = false,
  classes = '' 
} = Astro.props;
---
{isComingSoon ? (
  <div
    class={`
      group relative gap-x-4 col-span-full grid h-fit grid-cols-6 cursor-not-allowed border-t 
      ${classes} 
    `}
  >
    <span class="absolute top-1/2 transform -translate-y-1/2 -left-[30px] -rotate-90  font-mono">Case Study</span>
    <span class="absolute top-1/2 transform -translate-y-1/2 -right-[30px] rotate-90  font-mono">Case Study</span>
    <div class="col-span-full xl:col-span-1 flex xl:flex-col justify-between">
      <h3 class="">{title}</h3>
      <p class="xl:hidden">{description}</p>
      <p class="hidden xl:inline-block">{roles.short.join(', ')}</p>
    </div>
    <picture class="xl:mt-4 relative overflow-hidden h-auto col-span-full xl:col-span-6 xl:col-start-2">
      <ComingSoonBanner />

        src={image}
        alt={`Preview mockup of ${title}`}
        class='w-full h-full object-top select-none object-cover'
      />
    </picture>
    <div class="text-right col-span-full xl:col-span-1 flex xl:flex-col justify-between items-end">
      <p class="xl:hidden">{roles.short.join(', ')}</p>
      <p class="hidden xl:inline-block">{description}</p>
      <p>{year}</p>
    </div>
  </div>
) : (
  <a
    href={`/study/${slug}`}
    class={`
      group relative gap-x-4 col-span-full grid h-fit grid-cols-6 gap-4 border-t
      ${classes} 
    `}
  >

    <p class="col-start-2 uppercase bg-black">Case Study</p>
    <h1 class="col-span-full bg-black">FORMIE: Making a Universal interface for smart contract actions</h1>
    <p class="col-span-2 col-start-2 bg-black">Project: Film <br/> Project: Film <br/> Project: Film<br/> Project: Film<br/> Project: Film<br/> Project: Film</p>
    <picture class="absolute top-2 right-0 overflow-hidden h-auto col-span-3 mt-4">
      <img
        src={image}
        alt={`Preview mockup of ${title}`}
        class='w-full h-full object-top select-none object-cover'
      />
    </picture>
    
  <div class="-mx-4 grid grid-cols-6 gap-4 col-span-full bg-neutral-800 py-12 px-4">
    <p class="col-start-2 col-span-4 italic"></p>
  </div>
    <p>Case Study</p>
    <p class="text-[67px] tracking-tight !leading-[64px] col-span-3">FORMIE</p>
    
     <picture class="relative overflow-hidden h-auto col-span-3 mt-4">
      <img
        src={image}
        alt={`Preview mockup of ${title}`}
        class='w-full h-full object-top select-none object-cover'
      />
    </picture>
    <p class="text-[67px] tracking-tight !leading-[64px] col-span-3">Universal UI for smart contracts</p>
    <p class="basis-2/3">Branding, Product Design, Frontend Development</p>
    <p class="basis-2/3">2023</p>
 
    
  </a>
)}
