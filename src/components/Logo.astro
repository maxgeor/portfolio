---
import DancingLetters from './DancingLetters.astro';

export type Props = {
  isHome?: boolean;
  classes?: string;
};

const { isHome = false, classes = "" } = Astro.props;
---

{isHome ? (
  <div id="logo-button" class={`h-fit group flex gap-[7px] items-center mix-blend-difference cursor-pointer ${classes}`}>
    <span class="h-[10px] w-[10px] bg-[#0E9900] mb-px"></span>
    <DancingLetters title="MKCG" classes="hidden lg:group-hover:inline-block group-focus:inline-block" />
    <span class="non-dancing-letters lg:group-hover:hidden lg:group-focus:hidden">MKCG</span>
  </div>
) : (
  <a href="/" class={`group flex items-center h-4 gap-[7px] relative focus:h-fit ${classes}`}>
    <span class="h-[10px] w-[10px] bg-[#0E9900] mb-px"></span>
    <DancingLetters title="MKCG" classes="hidden group-hover:inline-block group-focus:inline-block" />
    <span class="group-hover:hidden group-focus:hidden">MKCG</span>
  </a>
)}

<script>
  const logoButton = document.querySelector('.logo-button');

  logoButton?.addEventListener('click', () => {
    const dancingLetters = logoButton?.querySelector('.dancing-letters');
    const nonDancingLetters = logoButton?.querySelector('.non-dancing-letters');

    if (dancingLetters?.classList.contains('hidden')) {
      dancingLetters.classList.remove('hidden');
      nonDancingLetters?.classList.add('hidden');
    } else {
      dancingLetters?.classList.add('hidden');
      nonDancingLetters?.classList.remove('hidden');
    }
  })
</script>


