---
import { formatDate } from '../utils/formatting';

export interface Props {
  title: string;
  href: string;
  date: string;
}

const { title, href, date } = Astro.props;

const formattedDate = formatDate(date);
---

<a 
  href={href}
  class="group col-span-full grid grid-cols-2 md:grid-cols-4 gap-6 border-t last:border-y border-[#DADADA] dark:border-neutral-700"
>
  <span class="md:col-span-2 group-hover:underline group-focus:underline">{title}</span>
  <span class="md:col-span-2 text-neutral-500 dark:text-neutral-400">
    {formattedDate}
  </span>
</a>