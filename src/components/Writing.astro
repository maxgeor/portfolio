---
import { formatDate } from '../utils/formatting';

export interface Props {
  title: string;
  href: string;
  date: string;
}

const { title, href, date } = Astro.props;

const formattedDate = formatDate(date);
---

<a 
  href={href}
  class="col-span-full hover:bg-neutral-800 hover: flex justify-between xs:justify-auto gap-4 border-t-[0.5px] last:border-y-[0.5px] border-[#636363] py-1 "
>
  <span class="xs:basis-1/2 ">{title}</span>
  <span class="xs:basis-1/2 uppercase">{formattedDate}</span>
</a>