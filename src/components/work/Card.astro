---
export interface Props {
	href: string;
	title: string;
	type: string;
	image?: string;
	description?: string;
}

const { 
	href, 
	title,
	type,
	image,
	description
} = Astro.props;
---
<a 
	href={href}
	class="group col-span-full grid grid-cols-12 gap-6 lg:gap-12 "
>
	<div class="col-span-full flex md:hidden justify-between gap-12">
		<div class=" -my-1">
			<h2 class="group-hover:underline">{title}</h2>
			<p class="text-gray-500">{description || ""}</p>
		</div>
		<div class="text-right text-gray-500 -my-1">
			{type.split(", ").map(t => (
				<p class="text-right">{t}</p>
			))}
		</p>
	</div>
	<div class="basis-1/3 hidden md:block -my-1 col-span-3 max-w-[250px]">
			<h2 class="group-hover:underline">{title}</h2>
			<p class="text-gray-500">{description || ""}</p>
		</div>
	<img src={image || "/work/memiori/preview.png"} class="col-span-full md:col-span-6 h-full w-full "/>
	<div class="hidden md:block text-gray-500 -my-1 col-span-3 ">
		{type.split(", ").map(t => (
			<p class="hidden md:block text-right">{t}</p>
		))}
	</div>
</a>