---
export interface Props {
  href: string;
  title: string;
  roles: string[];
  description?: string;
  image?: string;
}

const { href, title, roles, description, image } = Astro.props;
---

<a href={href} class="group col-span-full grid grid-cols-8 gap-6 sm:gap-12">
  <div class="col-span-3 -my-1 flex flex-col justify-between">
    <div>
      <h2 class="group-hover:underline">{title}</h2>
      <p class="text-gray-500 dark:text-neutral-500">{description || ""}</p>
    </div>

    <div class="text-gray-500 dark:text-neutral-500">
      {roles.join(", ")}
    </div>
  </div>
  <div class="col-span-5">
    <img
      src={image || "/work/memiori/preview.png"}
      class="col-span-full w-full drop-shadow-sm dark:brightness-90 dark:drop-shadow-sm-dark md:col-start-3 md:col-end-11 lg:col-span-6"
    />
  </div>
</a>
