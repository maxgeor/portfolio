---
export interface Props {
	href: string;
	title: string;
	roles: string[];
	description?: string;
	image?: string;
}

const { 
	href, 
	title,
	roles,
	description,
	image,
} = Astro.props;
---
<a 
	href={href}
	class="group col-span-full grid grid-cols-12 gap-6 lg:gap-12 "
>
	<div class="basis-1/3 hidden lg:block -my-1 col-span-3 max-w-[225px]">
		<h2 class="group-hover:underline">{title}</h2>
		<p class="text-gray-500">{description || ""}</p>
	</div>
	<img src={image || "/work/memiori/preview.png"} class="w-full col-span-full md:col-start-3 md:col-end-11 lg:col-span-6"/>
	<div class="hidden lg:block  -my-1 col-span-3 ">
		{roles.map(role => <p class="hidden lg:block text-gray-500 text-right">{role}</p>)}
	</div>
	<div class="col-span-full  lg:hidden gap-6">
		<div class="flex justify-between border-y  py-1">
			<h2 class="group-hover:underline">{title}</h2>
			<p class="whitespace-nowrap text-right text-gray-500">{roles.join(', ')}</p>
		</div>
		<p class=" text-gray-500 border-b py-1">{description}</p>
	</div>
</a>