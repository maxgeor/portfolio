---
export interface Props {
  href: string;
  title: string;
  roles: string[];
  description?: string;
  image?: string;
}

const { href, title, roles, description, image } = Astro.props;
---

<a href={href} class="group col-span-full grid grid-cols-12 gap-6 lg:gap-12">
  <div class="col-span-3 -my-1 hidden max-w-[225px] basis-1/3 lg:block">
    <h2 class="group-hover:underline">{title}</h2>
    <p class="text-gray-500 dark:text-[#838688]">{description || ""}</p>
  </div>
  <img
    src={image || "/work/memiori/preview.png"}
    class="col-span-full w-full md:col-start-3 md:col-end-11 lg:col-span-6 dark:brightness-[90%]"
  />
  <div class="col-span-3 -my-1 hidden lg:block">
    {
      roles.map((role) => (
        <p class="hidden text-right text-gray-500 dark:text-[#838688] lg:block">
          {role}
        </p>
      ))
    }
  </div>
  <div class="col-span-full gap-6 lg:hidden">
    <div
      class="flex justify-between border-y border-gray-200 py-1 dark:border-[#303236]"
    >
      <h2 class="group-hover:underline">{title}</h2>
      <p class="whitespace-nowrap text-right text-gray-500 dark:text-[#838688]">
        {roles.join(", ")}
      </p>
    </div>
    <p
      class="border-b border-gray-200 py-1 text-gray-500 dark:border-[#303236] dark:text-[#838688]"
    >
      {description}
    </p>
  </div>
</a>
