---
export interface Props {
	href: string;
	title: string;
	roles: string[];
	description?: string;
	image?: string;
}

const { 
	href, 
	title,
	roles,
	description,
	image,
} = Astro.props;
---
<a 
	href={href}
	class="group col-span-full grid grid-cols-12 gap-6 lg:gap-12 "
>
	<div class="col-span-full flex lg:hidden justify-between gap-12">
		<div class="max-w-[300px] -my-1">
			<h2 class="group-hover:underline">{title}</h2>
			<p class="text-gray-500">{description || ""}</p>
		</div>
		<div class="text-right text-gray-500 -my-1">
			{roles.map(role => <p class="text-right">{role}</p>)}
		</p>
	</div>
	<div class="basis-1/3 hidden lg:block -my-1 col-span-3 max-w-[250px]">
			<h2 class="group-hover:underline">{title}</h2>
			<p class="text-gray-500">{description || ""}</p>
		</div>
	<img src={image || "/work/memiori/preview.png"} class="col-span-full lg:col-span-6 max-w-xl lg:max-w-none mx-auto h-full w-full "/>
	<div class="hidden lg:block text-gray-500 -my-1 col-span-3 ">
		{roles.map(role => <p class="hidden lg:block text-right">{role}</p>)}
	</div>
</a>