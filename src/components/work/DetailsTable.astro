---
import ExternalLink from "../ExternalLink.astro";
export interface Props {
  type: string;
  roles: string[];
  year: number;
  tools: string[];
  link? : string;
  collaborators?: {
    name: string;
    role: string;
    href: string;
  }[],
  isShowingLink?: boolean;
}
const { type, roles, year, tools, link, collaborators, isShowingLink = true } = Astro.props;
---
<div id="work-details" class="flex flex-col gap-y-10 transition-opacity duration-[300ms] ease-out">
  
  <table class="flex flex-col w-full transition-all ease-out duration-150 " cellspacing="0" cellpadding="0">
    <!-- <tr>
      <td class="w-20 pr-5 capitalize pb-1">{type}</p></td>
    </tr> -->
    <tr>
      <td class="w-4 pr-5 pb-1"><p>Role</p></td>
      <td><p class="capitalize pb-1">{roles.join(', ')}</p></td>
    </tr>
    <!-- <tr>
      <td class="pr-5 pb-1"><p>Year</p></td>
      <td class="pb-1"><p>{year}</p></td>
    </tr> -->
    {tools ? (
      <tr>
        <td class="pr-5 pb-1"><p>Tools</p></td>
        <td class="pb-1"><p>{tools.join(', ')}</p></td>
      </tr>
    ) : null}
    {collaborators ? (
      <tr>
        <td class="pr-5 pb-1">Team</td>
        <td class="pb-1">
          {collaborators.map(({ name, href, role }) => (
            <span>
              <a href={href} target="_blank" class="underline">{name}</a>
              <span>({role})</span>
            </span>
          ))}
        </td>
      </tr>
    ) : null}
  </table>
  <!-- {link ? (
      <div class="md:hidden lg:inline-block order-last">
        <ExternalLink href={link}/>
    </div>
  ) : null} -->
</div>

<style is:inline>
  tr > td:first-child {
    width: min-content;
    padding-right: 24px;
  }
</style>