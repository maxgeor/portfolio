---
export type Buttonable = {
  padding?: string;
  invisiblePadding?: string;
  hasBackground?: boolean;
  ariaLabel?: string;
  classes?: string;
};

interface Button extends Buttonable {
  tag?: "button";
  id?: string;
  disabled?: boolean;
};

interface Link extends Buttonable {
  tag: "a";
  href: string;
  id?: string;
  target?: "_blank" | "_self" | "_parent" | "_top";
};

export type Props = Button | Link;

const {
  tag: Element = "button",
  padding = "p-2",
  invisiblePadding,
  hasBackground = true,
  ariaLabel = "",
  classes = "",
  ...props
} = Astro.props;

const actionClasses = invisiblePadding
  ? "group-hover:bg-neutral-100 dark:group-hover:bg-neutral-700 group-active:bg-neutral-100 dark:group-active:bg-neutral-700"
  : "hover:bg-neutral-100 dark:hover:bg-neutral-700 active:bg-neutral-100 dark:active:bg-neutral-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500";

const defaultClasses = `${
  hasBackground &&
  `bg-white dark:bg-neutral-700 shadow dark:shadow-dark ${actionClasses}`
} ${padding} flex items-center gap-2 text-neutral-950 dark:text-neutral-100 !rounded-full transition ease-in-out w-fit`;
---

<Element
  aria-label={ariaLabel}
  class={`
    button 
    ${invisiblePadding ? `group outline-none ${invisiblePadding}` : defaultClasses}
    ${classes}
  `}
  {...props}
>
  {
    invisiblePadding ? (
      <div class={defaultClasses}>
        <slot />
      </div>
    ) : (
      <slot />
    )
  }
</Element>

<style>
  .button.group:focus-visible {
    outline: none;
  }

  .button.group:focus-visible div {
    box-shadow: 0 0 0 2px #3c82f6;
  }
</style>
