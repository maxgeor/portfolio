---
export interface Props {
	type: 'project' | 'writing';
	href: string;
	title: string;
	description: string;
	externalLink?: boolean;
}

const { type, href, title, description, externalLink = false } = Astro.props;
---
<a 
	href={href}
	target={externalLink ? '_blank' : '_self'}
	class={`
		group relative col-span-full items-baseline sm:gap-x-5 flex hover:bg-gray focus:bg-gray
	`}
>
	<div class="w-full pr-5 py-5 ml-5 items-baseline sm:gap-x-5 flex border-b-[0.5px] border-gray-darker ">
		<div class='basis-1/2 pr-5 -my-1 '>
			<p>{title}</p>
		</div>
		<div class={`
			${type === 'writing' ? 'text-[13px]' : null}
			basis-1/2 -my-1
		`}>
			<p>{description}</p>
		</div>
	</div>
</a>

<style>
	a:last-child > div {
		border-bottom: none;
	}
</style>
