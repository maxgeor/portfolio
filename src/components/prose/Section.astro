---
export interface Props {
  title: string;
}
const { title } = Astro.props;

const headerId = title.split(' ').join('-').toLowerCase();
---
<section class="col-span-full grid grid-cols-1 lg:grid-cols-12 gap-y-6 gap-x-12">
  <h1 id={headerId} class="border-t xl:border-none border-[#ccd1d7] col-span-full xl:col-span-2">
    {title}
  </h1>
  <slot/>
</section>