---
import NavList from "./NavList.astro";
import Button from "../../Button.astro";
import ChevronLeftIcon from "../../icons/ChevronLeftIcon.astro";

export interface Props {
  sections: {
    title: string;
    subsections?: {
      title: string;
    }[];
  }[];
  classes?: string;
}

const { sections, classes = '' } = Astro.props;
---

<nav
  class={`
    relative flex md:flex-col items-start justify-start overflow-auto md:overflow-scroll no-scrollbar col-span-full md:h-screen scroll-smooth md:sticky md:col-span-1 p-4 md:p-0 md:mt-0 md:pr-4 md:pb-16 top-0
    ${classes}
  `}
>
  <a href="/" class="hidden md:flex justify-center items-center p-6 sticky top-0 -left-12 z-10">
    <ChevronLeftIcon classes="-ml-[3px]" />
  </a>
  <NavList sections={sections} />
  <div
    class="sticky top-0 left-0 z-10 h-5 w-4 shrink-0 bg-gradient-to-r from-white dark:from-black lg:hidden"
  >
  </div>
  <div
    class="sticky top-0 right-0 z-10 h-5 w-4 shrink-0 bg-gradient-to-l from-white dark:from-black lg:hidden"
  >
  </div>
</nav>
