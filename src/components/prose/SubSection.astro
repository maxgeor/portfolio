---
export interface Props {
  hasImages?: boolean;
}
const { hasImages = true } = Astro.props;
---
<div class="flex flex-col gap-6 col-span-full lg:col-start-3 lg:col-end-7">
  <slot name="text"/>
</div>
{hasImages ? (
  <div class="flex flex-col gap-6 col-span-full lg:col-start-7 lg:col-end-13 -mx-6 sm:mx-0">
    <slot name="images"/>
  </div>
) : null}