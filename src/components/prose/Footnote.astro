---
export interface Props {
  number: number;
  classes?: string;
}
const { number, classes = "" } = Astro.props;
---

<div class={`lg:absolute top-0 lg:-right-[10.5rem] xl:-right-[16rem] lg:w-36 xl:w-52 text-xs flex gap-4 text-neutral-500 dark:text-neutral-490 ${classes}`}>
  <div class="relative">
    <div class="absolute top-0 left-0">{number}</div>
    <div class="flex flex-col gap-3 pl-[22px]">
      <slot />
    </div>
  </div>
</div>