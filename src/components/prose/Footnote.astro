---
export interface Props {
  number: number;
  classes?: string;
}
const { number, classes = "" } = Astro.props;
---

<span class={`
  not-prose xl:absolute top-0 -right-[14rem] xl:w-52 text-xs text-neutral-500 dark:text-neutral-490 
  ${classes}
`}>
  <span class="relative">
    <span class="absolute top-0 left-0">{number}</div>
    <span class="pl-4 sm:pl-6">
      <slot />
    </span>
  </span>
</span>