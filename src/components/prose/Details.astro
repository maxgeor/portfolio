---
// import ChevronRightIcon from '../icons/ChevronRightIcon.astro'

export interface Props {
  summary: string;
}
const { summary } = Astro.props;
---

<details class="flex flex-col gap-5  border border-[#eaeeef] bg-gray-50 rounded-md">
  <summary class="rounded-t-md marker:hidden flex justify-between items-center cursor-pointer py-[11px] pl-[15px] pr-3">
    <span class="transition duration-100">{summary}</span>
    <svg 
      width="15" 
      height="15" 
      viewBox="0 0 15 15" 
      fill="none" 
      xmlns="http://www.w3.org/2000/svg"
      class="chevron-right transition duration-150"
    >
      <path d="M6.1584 3.13508C6.35985 2.94621 6.67627 2.95642 6.86514 3.15788L10.6151 7.15788C10.7954 7.3502 10.7954 7.64949 10.6151 7.84182L6.86514 11.8418C6.67627 12.0433 6.35985 12.0535 6.1584 11.8646C5.95694 11.6757 5.94673 11.3593 6.1356 11.1579L9.565 7.49985L6.1356 3.84182C5.94673 3.64036 5.95694 3.32394 6.1584 3.13508Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path>
    </svg>
  </summary>
  <div class="flex flex-col gap-6 mt-[9px] px-[15px] pb-[23px]">
    <slot/>
  </div>
</details>

<style is:inline>
  details[open] summary > .chevron-right {
    transform: rotate(90deg) translateX(-1px);
  }

  details[open] summary > span {
    color: #999;
  }
</style>