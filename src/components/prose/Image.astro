---
import { image } from 'astro:content';
import Caption from './Caption.astro';
export interface Props {
  src: string;
  alt: string;
  hasCaptions?: boolean;
  classes?: string;
}
const { src, alt, hasCaptions = true, classes = '' } = Astro.props;

const imageClasses = `aspect-[7/4] object-cover w-full shadow-[0_1px_1px_rgb(0,0,0,0.03)] sm:shadow-sm ring-1 ring-gray-900/[8%] sm:ring-gray-900/[6.5%] rounded-lg sm:rounded-xl bg-gray-50 ${classes}`;
---
{hasCaptions ? (
  <div class="flex flex-col items-center gap-3 col-span-full my-2 sm:mt-4 overflow-visible">
    <img src={src} alt={alt} class={imageClasses} />
    <Caption text={alt} />
  </div>
) : (
  <img src={src} alt={alt} class={imageClasses} />
)}