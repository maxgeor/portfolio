---
export interface Props {
  src: string;
  alt: string;
  classes?: string;
}
const { src, alt, classes = "" } = Astro.props;
---
<img 
  src={src} 
  alt={alt} 
  class={`col-span-full xl:col-start-2 xl:col-end-8 aspect-[7/4] object-cover w-full border border-[#eeeff2] border-b-gray-200 dark:border-[#303236]/80 dark:border-b-[#303236]/80 dark:border-t-[#2B2E35] rounded-lg bg-gray-50 dark:brightness-90 ${classes}`} 
/>
