---
import { image } from 'astro:content';
import Caption from './Caption.astro';
export interface Props {
  src: string;
  alt: string;
  hasCaptions?: boolean;
  classes?: string;
}
const { src, alt, hasCaptions = true, classes = '' } = Astro.props;

const imageClasses = `aspect-[7/4] object-cover w-full border border-[#eef0f4] border-b-gray-200 rounded-[calc(100vw*0.05)] bg-gray-50 ${classes}`;
---
{hasCaptions ? (
  <div class="flex flex-col items-center gap-3 col-span-full my-2">
    <img src={src} alt={alt} class={imageClasses} />
    <Caption text={alt} />
  </div>
) : (
  <img src={src} alt={alt} class={imageClasses} />
)}