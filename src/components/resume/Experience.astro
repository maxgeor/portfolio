---
export interface Props {
  title: string;
  startDate: string;
  endDate: string;
  tech: string[];
  blurb: string;
  titleWidth?: string;
  company?: string;
}

const { title, startDate, endDate, tech, blurb, company, titleWidth } = Astro.props;
---

<article class="col-span-3 grid grid-cols-3 gap-4">
  <h2 class={`font-medium ${titleWidth}`}>{title}</h2>
  <p>{company}</p>
  <div class="flex relative h-fit">
    <p class="w-[69px] shrink-0">{startDate}</p>
    <span class="absolute top-1/2 transform -translate-y-1/2  left-[58px]">-</span>
    <p class="w-[53px] shrink-0">{endDate}</p>
  </div>
  <p class="-ml-2">{tech.map(tool => (<span>- {tool}<br/></span>))}</p>
  <p class="col-span-2">{blurb}</p>
  <slot />
</article>
