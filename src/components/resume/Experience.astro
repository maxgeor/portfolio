---
export interface Props {
  title: string;
  startDate: string;
  endDate?: string;
  blurb: string;
  tech?: string[];
  titleWidth?: string;
  company?: {
    title: string;
    url?: string;
  };
}
const { title, startDate, endDate, tech, blurb, company, titleWidth } =
  Astro.props;
---

<article class="flex flex-col gap-x-4 gap-y-3 col-span-2">
  <div class="flex justify-between">
    <div class="h-fit">
      <h3 class={`col-span-2  text-neutral-950`}>
        {title}
      </h3>
      {company.url ? (
        <a href={company.url} target="_blank">{company.title}</a>
      ) : (
        <p>{company.title}</p>
      )}
    </div>
    <p class="whitespace-nowrap justify-self-end">
      <span class="mr-0.5">{startDate}</span>-{endDate && <span class="ml-0.5">{endDate}</span>}
    </p>
  </div>
  <p class={` col-span-4`}>{blurb}</p>
  <slot />
  {tech && <p class="col-span-full">{tech.join(', ')}</p>}  
</article>
