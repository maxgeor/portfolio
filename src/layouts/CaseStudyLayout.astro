---
const {frontmatter} = Astro.props;
---
<div >
  <div class="flex h-48">
    <div class="w-full bg-gray-500 h-full"></div>
    <div class="w-full bg-gray-400 h-full"></div>
    <div class="w-full bg-gray-300 h-full"></div>
    <div class="w-full bg-gray-200 h-full"></div>
  </div>
  <section class="p-6  md:p-9  ">
    <div class="flex flex-col gap-y-6 md:gap-y-9 ">
      <div class="flex justify-between">
        <h1 class="italic leading-[28px] md:leading-[32px]  text-4xl md:text-5xl tracking-tight">
          {frontmatter.title}
        </h1>
        <span class="leading-3 text-[10px] font-ibm text-gray-500 uppercase tracking-wider ">
          Case Study
        </span>
      </div>
      <div class="inline-flex flex-col-reverse md:flex-row  w-full gap-6 md:gap-9">
        {frontmatter.bullets && (
          <ul class="col-span-1 list-disc list-inside flex-1 ">
          {frontmatter.bullets.map((bullet: string) => (
            <li>{bullet}</li>
            ))}
          </ul>
        )}
        <table class="flex-1 h-min" cellspacing="0" cellpadding="0">
          {frontmatter.company && (
            <tr>
              <td>Company</td>
              <td class="text-gray-500">{frontmatter.company}</td>
            </tr>
          )}
          <tr>
            <td>Role</td>
            <td class="text-gray-500">
              {frontmatter.roles.join(", ")}
            </td>
          </tr>
          <tr>
            <td>Tools</td>
            <td class="text-gray-500">{frontmatter.tools.join(", ")}</td>
          </tr>
          {frontmatter.collaborators && (
            <tr>
              <td><p>Collaborators</p></td>
              <td class="text-gray-500">{frontmatter.roles.join(", ")}</td>
            </tr>
          )}
        </table>
        
      </div>
    </div>
  </section>
  <main class="max-w-prose text-lg text-gray-400">
    <span class="font-ornament">
      d
    </span>
    <slot />
  </main>
</div>

<style>
	tr > td {
		padding-bottom: 0;
	}
</style>
