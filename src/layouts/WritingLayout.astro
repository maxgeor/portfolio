---
import Layout from "./Layout.astro";
import XIcon from "../components/icons/XIcon.astro";
import { formatDate } from '../utils/formatting';

const { frontmatter } = Astro.props;
const formattedDate = formatDate(frontmatter.date);
---
<Layout title={frontmatter.title}>
  <main class="flex flex-col md:grid grid-cols-16 gap-15 col-span-full pb-[45px]">
    <a href="/" class="group fixed -top-[2px] right-[0px] mix-blend-exclude z-50 p-15 hover:bg-transparent focus:bg-transparent">
      <XIcon classes='shrink-0 text-neutral-700 dark:text-neutral-300 group-hover:opacity-50' />
    </a>
    <div class="h-min md:h-full border-l pl-5 border-neutral-800 dark:border-neutral-300 flex flex-col justify-between xl:gap-15 col-span-full md:col-span-4 lg:col-span-3 pr-15">
      <h1 class="">{frontmatter.title}</h1>
      <p>{formattedDate}</p>
    </div>
    <article
      class={`
        flex flex-col gap-15 md:col-start-5 col-span-full md:col-span-10 lg:col-span-8 xl:col-span-6 h-full max-w-[80ch]
        text-12
        prose-p:my-0
        prose-ul:my-0 prose-ul:list-disc prose-ul:pl-[12px] md:prose-ul:pl-0
        prose-ol:my-0 prose-ol:list-decimal prose-ol:pl-[12px] md:prose-ol:pl-0
        prose-li:marker:text-inherit
      `}
    >
      <slot />
    </article>
  </main>
</Layout>

