---
const {frontmatter} = Astro.props;
---
<div class="relative flex flex-col items-center">
  <a href="/" class="h-12 w-12 -mt-[64px] bg-stone-800 outline-1 outline-[#322e2d] rounded-full sticky top-6 left-1/2 -translate-x-1/2" ></a>
  <section class="flex flex-col items-center bg-[#322e2d] px-6 pt-[112px] pb-12 w-full">
    <h1 class="text-5xl tracking-tight mb-6 text-center">{frontmatter.title}</h1>
    <p class="text-[10px] leading-3 uppercase tracking-wider text-stone-400">{frontmatter.date}</p>
  </section>
  <article id="content" class="text-base text-stone-400 mx-6 mt-12">
    <slot />
  </article>
</div>

<style is:inline>
  article#content > * {
    width: 100%;
    max-width: 65ch;
    margin: 0 auto;
  }

  article#content > img, video {
    width: 100%;
    max-width: calc(65ch + 48px);
    margin: 0 auto;
  }

  article#content > h2 {
    font-size: 2rem;
    line-height: 2.25rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
  }

  article#content > p {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  article#content > p:first-child {
    margin-top: 0;
  }
  article#content > p:last-child {
    margin-bottom: 0;
  }
</style>
