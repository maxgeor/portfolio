---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";
import { formatDate } from '../utils/formatting';

const { frontmatter } = Astro.props;
const formattedDate = formatDate(frontmatter.date);
---

<Layout title={frontmatter.title}>
  <div class="col-span-full grid grid-cols-12 gap-4">
    <Header />
    <div class="col-span-full grid grid-cols-12 gap-x-4 py-1 border-y border-neutral-700">
      <h1 class="col-span-6">{frontmatter.title}</h1>
      <p class="col-span-6 md:col-span-2 md:col-start-11 uppercase">
        {formattedDate}
      </p>
    </div>
    <main class="md:col-start-3 xl:col-start-3 col-span-full md:col-span-6 xl:col-span-4 max-w-prose">
      <div
        class={`
          prose-xs max-w-prose leading-4 normal-case	
          prose-headings:uppercase
          prose-headings:mt-6 prose-headings:mb-2
          prose-p:my-2
          first:prose-p:mt-0
          last:prose-p:mb-0
          prose-a:underline
          prose-code:bg-neutral-700/50 prose-code:rounded prose-code:px-1 prose-code:border prose-code:border-[#333333]/[40%] prose-code:py-[2px] prose-code:text-[12px] prose-code:tracking-tight prose-code:leading-6 prose-code:tabular prose-code:font-normal prose-code:whitespace-nowrap
          prose-ul:list-disc
          prose-ol:list-decimal 
          prose-li:marker:text-neutral-500
        `}
      >
        <slot />
      </div>
    </main>
  </div>
</Layout>
