---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";
import { formatDate } from '../utils/formatting';

const { frontmatter } = Astro.props;
const formattedDate = formatDate(frontmatter.date);
---

<Layout title={frontmatter.title}>
  <div class="col-span-full grid grid-cols-12 gap-4">
    <Header />
    <div class="grid grid-cols-12 gap-4 col-span-full ">
      <span class="sm:order-last col-span-10">{frontmatter.title}</span>
      <span class="sm:order-first flex col-span-2 justify-self-end sm:justify-self-auto text-[11px]">{formattedDate}</span>
    </div>  
    <main class="sm:col-start-3 xl:col-start-3 col-span-full sm:col-span-8 xl:col-span-4 max-w-prose">
      <div
        class={`
          prose-xs max-w-prose leading-4 
          prose-headings:uppercase
          prose-headings:mt-6 prose-headings:mb-2
          prose-p:my-2
          first:prose-p:mt-0
          last:prose-p:mb-0
          prose-a:underline
          prose-strong:text-[#eee] prose-strong:font-bold
          prose-code:bg-neutral-700/50 prose-code:rounded prose-code:px-1 prose-code:border prose-code:border-[#333333]/[40%] prose-code:py-[2px] prose-code:text-[12px] prose-code:tracking-tight prose-code:leading-6 prose-code:tabular prose-code:font-normal prose-code:whitespace-nowrap
          prose-ul:list-disc
          prose-ol:list-decimal 
          prose-li:marker:text-neutral-500
        `}
      >
        <slot />
      </div>
    </main>
  </div>
</Layout>
