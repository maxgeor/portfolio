---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---
<!-- <Layout title={frontmatter.title}> -->
  <!-- <main class="grid grid-cols-12 gap-y-8 gap-x-4 col-span-full border-t-[0.5px] pt-2 border-black dark:border-white h-fit"> -->
  <main class="grid grid-cols-12 gap-y-8 gap-x-4 col-span-full h-fit">
    <div class="flex flex-col col-span-full lg:col-span-3  pr-4 -my-0.5 ">
      <h1 class="uppercase text-balance">{frontmatter.title}</h1>
      <p>{frontmatter.date}</p>
    </div>
    <article
      class={`
        flex flex-col gap-4 col-span-full md:col-span-9 lg:col-span-7 xl:col-span-5 2xl:col-span-4  -my-0.5 max-w-[80ch] text-pretty
        text-12
        prose-headings:uppercase 
        prose-p:my-0
        prose-ul:my-0 prose-ul:list-disc prose-ul:pl-[16px] lg:prose-ul:pl-0
        prose-ol:my-0 prose-ol:list-decimal prose-ol:pl-[16px] lg:prose-ol:pl-0
        prose-li:marker:text-inherit
        prose-a:underline
      `}
    >
      <slot />
    </article>
  </main>
