---
const {frontmatter} = Astro.props;
import Logo from '../components/Logo.astro';
---
<div class="fonr-serif relative flex flex-col items-center">
  <!-- <a href="/" class="flex items-center justify-center h-14 w-14 -mt-[56px] bg-gradient-to-b from-neutral-800 to-[#272727] hover:to-neutral-800  duration-150 rounded-full sticky top-8 z-10" >
    <Logo classes="h-10 w-10 shrink-0 text-[#C6C6C6]" />
  </a> -->
  <section class="flex flex-col items-center px-6 pt-[88px] pb-12 w-full">
    <h1 class="text-6xl  mb-6 text-center">
      <span class="font-floral text-[134px] bg-black">
        <!-- {frontmatter.title.slice(0, 1)} -->
        Y
      </span>
      {frontmatter.title.substring(1)}
    </h1>
    <p class="text-[10px] leading-3 uppercase acking-wide ">{frontmatter.date}</p>
  </section>
  <article id="content" class="text-lg  mx-6 mt-12">
    <slot />
  </article>
</div>

<style is:inline>
  article#content > * {
    width: 100%;
    max-width: 65ch;
    margin: 0 auto;
  }

  article#content > img, video {
    width: 100%;
    max-width: calc(65ch + 48px);
    margin: 0 auto;
  }

  article#content > h2 {
    font-size: 2rem;
    line-height: 2.25rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
  }

  article#content > p,
  article#content > ul,
  article#content > ol {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    max-width: 65ch;
  }
  
  article#content > p:first-child {
    margin-top: 0;
  }
  article#content > p:last-child {
    margin-bottom: 0;
  }
</style>
