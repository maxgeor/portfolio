---
const { frontmatter } = Astro.props;
---
<main id="main-content" class="grid grid-cols-12 gap-y-8 gap-x-4 col-span-full h-fit scroll-mt-[47px]">
  <div class="flex flex-col col-span-full lg:col-span-3  pr-4 -my-0.5 lg:max-w-[40ch]">
    <h1 class="uppercase text-balance">{frontmatter.title}</h1>
    <p>{frontmatter.date}</p>
  </div>
  <article
    class={`
      flex flex-col gap-4 col-span-full md:col-span-9 lg:col-span-7 xl:col-span-5 2xl:col-span-4  -my-0.5 max-w-[85ch] text-pretty scroll-mt-[47px] pb-6
      text-12
      prose-headings:uppercase 
      prose-p:my-0
      prose-ul:text-pretty prose-ul:list-none prose-ul:-my-0
      prose-ol:text-pretty prose-ol:list-none prose-ol:pl-0 
      prose-li:relative prose-li:marker:content-[''] prose-li:before:content-['â€¢']  lg:prose-li:before:content-['-'] prose-li:pl-3 lg:prose-li:pl-0  prose-li:before:absolute prose-li:before:-left-0 lg:prose-li:before:-left-4 prose-li:before:top-0 lg:prose-li:before:-top-px
      prose-li:m-0
      prose-li:marker:text-inherit
      prose-a:underline
    `}
  >
    <slot />
  </article>
</main>