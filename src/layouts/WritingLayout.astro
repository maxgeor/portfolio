---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";
import { formatDate } from '../utils/formatting';

const { frontmatter } = Astro.props;
const formattedDate = formatDate(frontmatter.date);

---

<Layout title={frontmatter.title}>
  <div class="grid grid-cols-6 xl:grid-cols-8 gap-y-8 gap-x-4 px-4">
    <Header goBackPath="/writing" />
    <div class="grid grid-cols-6 xl:grid-cols-8 col-span-full gap-x-4">
      <h1 class="col-span-3 xl:col-start-2 xl:col-span-5 uppercase">{frontmatter.title}</h1>
      <p class="col-span-3 md:col-span-1 xl:justify-self-end">
        {formattedDate}
      </p>
    </div>
    <main class="col-span-full sm:col-span-5 md:col-span-4 xl:col-start-2">
      <div
        class={`
          prose-xs max-w-prose leading-4 normal-case	
          prose-headings:uppercase
          prose-headings:mt-12 prose-headings:mb-4
          prose-a:underline
          prose-strong:font-medium prose-strong:text-neutral-100
          prose-code:bg-neutral-700/50 prose-code:rounded prose-code:px-1 prose-code:border prose-code:border-[#333333]/[40%] prose-code:py-[2px] prose-code:text-[12px] prose-code:tracking-tight prose-code:leading-6 prose-code:font-mono prose-code:font-normal prose-code:whitespace-nowrap
          prose-ul:list-disc
          prose-ol:list-decimal 
          marker:prose-li:font-inter marker:prose-li:text-[13.5px]
        `}
      >
        <slot />
      </div>
    </main>
  </div>
</Layout>
