---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";
import ChevronUpIcon from "../components/icons/ChevronUpIcon.astro";
import ChevronDownIcon from "../components/icons/ChevronDownIcon.astro";
import UpRightArrowIcon from "../components/icons/UpRightArrowIcon.astro";
import Button from "../components/Button.astro";
import ExpandableSidebarNav from "../components/study/ExpandableSidebarNav.astro";

const { frontmatter } = Astro.props;
const {
  title,
  tldr,
  roles,
  year,
  link,
  tools,
  sections,
  image,
  teammates,
} = frontmatter;
---

<Layout title={title} description={tldr} maxWidth="max-w-none">
  <main class="relative col-span-full grid grid-cols-4 gap-4 lg:gap-16">
    <Button 
      tag="a" 
      href="#article" 
      padding="px-3 py-1.5"
      classes="opacity-0 focus:opacity-100 pointer-events-none focus:pointer-events-auto absolute z-50 top-3 sm:top-9 transform left-1/2 -translate-x-1/2  px-3.5">Skip to main content</Button>
    <Button
      id="go-back-up-button"
      ariaLabel="Go back up"
      ariaHidden="true"
      disabled={true}
      padding="pl-[10px] pr-3 py-1.5"
      classes="gap-1 fixed top-4 left-1/2 z-50 transform -translate-x-1/2 -translate-y-[52px] sm:-translate-y-[80px] duration-[800ms]"
    >
      <ChevronUpIcon classes="-mx-px -mb-px" />
      <span class="leading-4">Go back</span>
    </Button>
    <Button
      id="go-back-down-button"
      disabled={true}
      ariaLabel="Go back down"
      ariaHidden="true"
      padding="pl-[10px] pr-3 py-1.5"
      classes="gap-1 fixed top-4 left-1/2 z-50 transform -translate-x-1/2 -translate-y-[52px] sm:-translate-y-[80px] duration-[800ms]"
    >
      <ChevronDownIcon classes="-mx-px -mt-px" />
      <span class="leading-4">Go back</span>
    </Button>
    <Header classes="px-4" />
    <section 
      class='col-span-full grid grid-cols-4 gap-4 px-4'>
      <figure class={`
        lg:order-last col-span-full lg:col-span-2 select-none -mx-4 lg:mx-0
      `}>
        <img
          src={image}
          alt={''}
          class='aspect-[7/4] h-full w-full object-cover'
        />
      </figure>
      <div class="flex flex-col lg:flex-col-reverse justify-between gap-4 col-span-full lg:col-span-2 h-full">
        <div class="flex justify-between items-end">
          <h1 
            class="font-medium text-5xl lg:text-7xl  xl:text-9xl  lg:leading-[56px] xl:leading-[96px] tracking-[-0.06em] col-span-full -ml-1 xl:-ml-2.5"
          >
            {title}
          </h1>
          <div class="h-full flex flex-col justify-end lg:justify-between">
            {link && (
              <a href={link} target="blank" class="group -mr-1 xl:mt-6">
                <span class="group-hover:underline">See it</span>
                <UpRightArrowIcon classes="inline-block ml-0.5 mb-px" />
              </a>
            )}
            <p class="hidden lg:inline-block leading-6 lg:leading-3 self-end">{year}</p>
          </div>
        </div>
        <div class="flex flex-col gap-y-4">
          <div class="grid grid-cols-4 gap-x-4 border-t border-white/[35%]">
            <p class="col-span-1 lg:col-span-2">In short…</p>
            <p class="col-span-3 lg:col-span-2">{tldr}</p>
          </div>
          <div class="grid grid-cols-4 gap-x-4 border-t border-white/[35%]">
            <p class="col-span-1 lg:col-span-2">Role</p>
            <p class="col-span-3 lg:col-span-2 capitalize">{roles.join(", ")}</p>
          </div>
          <div class="grid grid-cols-4 gap-x-4 border-t border-white/[35%]">
            <p class="col-span-1 lg:col-span-2">Tools</p>
            <p class="col-span-3 lg:col-span-2 capitalize">{tools.join(", ")}</p>
          </div>
          <div class="grid grid-cols-4 gap-x-4 border-t border-white/[35%]">
            <p class="col-span-1 lg:col-span-2">Team</p>
            {teammates?.length > 0 ? (
              <ul class="col-span-3 lg:col-span-2 capitalize">
                {teammates.map((teammate: { name: string, role: string, href: string }) => (
                  <li>
                    <a 
                      href={teammate.href}
                      target="_blank"
                      class="underline" 
                    >
                      {teammate.name}
                    </a> 
                    ({teammate.role})
                  </li>
                ))}
              </ul>
            ) : "—"}
          </div>
          <div class="lg:hidden grid grid-cols-4 gap-x-4 border-t border-white/[35%]">
            <p class="col-span-1 lg:col-span-2">Year</p>
            <p class="col-span-3 lg:col-span-2 capitalize">{year}</p>
          </div>
        </div>
      </div>
    </section>
    <article
      id="article"
      class="w-full mx-auto col-span-full grid grid-cols-1 md:grid-cols-8 gap-4 sm:gap-4 overflow-visible scroll-mt-4 pt-12 lg:pt-8 xl:pt-16 px-4"
    >
      <ExpandableSidebarNav sections={sections} />
      <div
        class={`
          prose-sm text-white w-full
          
          prose-headings:font-medium

          prose-h1:text-4xl prose-h1:mt-16 first:prose-h1:mt-0 prose-h1:mb-4
          prose-h1:scroll-mt-[63px] md:prose-h1:scroll-mt-12 prose-h1:tracking-[-0.035em] prose-h1:-ml-0.5

          prose-h2:scroll-mt-14 prose-h2:tracking-[-0.03em] 

          prose-h3:italic prose-h3:font-normal prose-h3:text-[14px] prose-h3:leading-5 prose-h3:text-white

          prose-p:leading-5
          prose-p:max-w-prose 

          prose-strong:font-medium prose-strong:text-neutral-50

          prose-a:underline

          prose-code:bg-neutral-700/[55%] prose-code:border prose-code:border-neutral-700 prose-code:text-[12px] prose-code:leading-5 prose-code:font-mono prose-code:font-normal prose-code:tracking-tight prose-code:whitespace-nowrap prose-code:rounded-[3px] prose-code:py-px prose-code:px-[3px] 

          prose-ul:list-disc prose-ul:col-span-full xl:prose-ul:col-start-2 xl:prose-ul:col-end-8 prose-ul:max-w-prose prose-ul:pl-[21px]

          prose-ol:list-decimal prose-ol:col-span-full xl:prose-ol:col-start-2 xl:prose-ol:col-end-4 prose-ol:max-w-prose prose-ol:pl-[21px]

          prose-li:m-0
          prose-li:pl-1
          prose-li:leading-5

          prose-figure:w-auto prose-figure:select-none prose-figure:mt-6 prose-figure:mb-8 prose-figure:-mx-4 sm:prose-figure:-mx-4 md:prose-figure:mx-0 
          prose-video:w-auto prose-video:select-none	prose-video:mt-6 prose-video:mb-8 prose-video:-mx-4 sm:prose-video:-mx-4 md:prose-video:mx-0

          prose-td:p-0

          col-span-full xl:col-start-3 xl:col-end-7
          px-4 sm:px-4 md:px-0 mx-auto 
        `}
      >
        <slot />
      </div>
    </article>
  </main>
</Layout>

