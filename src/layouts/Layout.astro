  }

  @font-face {
    font-family: untitled;
    src: url(/fonts/untitled/test-untitled-sans-regular-.woff2)
      format("woff2");
    font-style: ;
  }
  
  @font-face {
    font-family: untitled;
    src: url(/fonts/untitled/test-untitled-sans-medium-.woff2)
      format("woff2");
    font-weight: 500;
    font-style: ;
  }

  @font-face {
    font-family: "Berkeley Mono";
    src: url(/fonts/BerkeleyMono-Regular.ttf);
  }

  html {
    text-rendering: optimizeLegibility;
    /* letter-spacing: -0.01rem; */
  }

  a {
    text-underline-offset: 2px;
    text-underline-thickness: 0.01em;
  }

  a:focus-visible {
    outline: solid 2px #ffff00;
    border-radius: 1px;
    outline-offset: 3px;
  }

  tr:last-child > td {
    padding-bottom: 0;
  }

  td {
    vertical-align: top;
  }

  del {
    text-decoration-thickness: 0.1em;
  }

  sup {
    margin-left: 1px;
  }

  select::-ms-expand {
    display: none;
  } 

  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
