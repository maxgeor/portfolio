---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen text-sm antialiased" style="text-rendering: optimizeLegibility;">
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
	
	html {
		text-rendering: optimizeLegibility;
		letter-spacing: -0.01em;
	}

	/* h1, h2, h3, h4, h5, h6 {
		font-family: 'Bodoni Moda', serif;
		text-transform: uppercase;
		line-height: normal;
	} */

	a {
		text-underline-offset: 3px;
		text-underline-thickness: 0.01em;
	}

	td {
		vertical-align: top;
	}

	@font-face {
    font-family: untitled;
    src: url(/untitled/sans/test-untitled-sans-regular.woff2) format('woff2');
	}

	.font-untitled {
		font-family: untitled;
	}
	
	@font-face {
    font-family: ornament;
    src: url(../../public/bodoni-ornaments.ttf);
	}

	.font-ornament {
		font-family: ornament;
	}
	
	@font-face {
    font-family: 'Century Expanded';
    src: url(../../public/century/century-expanded-regular.otf);
	}

	.font-century {
		font-family: 'Century Expanded';
	}

	.full-width {
		width: 100vw;
		position: relative;
		left: 50%;
		right: 50%;
		margin-left: -50vw;
		margin-right: -50vw;
	}
</style>