---
import SocialLinks from "../components/SocialLinks.astro";
export interface Props {
  title?: string;
  description?: string;
  maxWidth?: string | null;
  backgroundColor?: string;
}

const {
  title = "Max Georgopoulos",
  description,
  maxWidth = "",
  backgroundColor = "bg-[#fff]",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth ">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description || "Designer & developer"} />
  </head>
  <body
    style="text-rendering: optimizeLegibility;"
    class={`
      ${backgroundColor} ${maxWidth}
     text-[#000]  min-h-screen text-[10px] leading-3 font-medium selection:bg-[#e1e1e1] antialiased p-3 
    `}
  >
    <aside class=" border-transparent z-50 flex flex-col justify-between gap-3 w-[108px] h-[calc(100vh-24px)] fixed top-3 left-3 ">
      <div class="flex flex-col gap-3">
        <a href="/" class="uppercase">MKCG</a>
        <div>
          <div class="col-span-3 flex items-center justify-between gap-1 bg-neutral-200">
            Everything
            <div class="flex">
              <span class="shrink-0 border border-neutral-200 border-box h-[6px] w-[6px] rounded-full bg-[#ff32b0]"></span>
              <span class="shrink-0 border border-neutral-200 border-box h-[6px] w-[6px] rounded-full bg-[#39c239] -ml-0.5"></span>
              <span class="shrink-0 border border-neutral-200 border-box h-[6px] w-[6px] rounded-full bg-[blue] -ml-0.5"></span>
            </div>
          </div>
          <div class="flex items-center justify-between gap-1 col-span-3 ">
            Case Studies
            <span class="h-[6px] w-[6px] border border-white rounded-full bg-[#ff32b0]"></span>
          </div>
          <div class="flex items-center justify-between gap-1 col-span-3 ">
            Client
            <span class="h-[6px] w-[6px] border border-white rounded-full bg-[#39c239]"></span>
          </div>
          <div class="flex items-center justify-between gap-1 col-span-3 ">
            Projects
            <span class="h-[6px] w-[6px] border border-white rounded-full bg-[blue]"></span>
          </div>
          <div class="flex items-center justify-between gap-1 col-span-3 ">
            Writing
            <span class="h-[6px] w-[6px] border border-white rounded-full bg-[#ab5cff]"></span>
          </div>
        </div>
      </div>
      <div class="flex justify-between items-center">
        <a href="/info" class="uppercase">Info</a>
        <span class="h-1.5 w-1.5 border border-transparent rounded-full"></span>
      </div>
    </aside>
    <slot />
  </body>
</html>

<style is:global>  
  .tabualar {
    font-variant: small-caps;
  }
  .text-balance {
    text-wrap: balance;
  }
  .small-caps {
    font-variant: small-caps;
  }
  
  @font-face {
    font-family: Romie;
    src: url(/fonts/RomieTrial-Regular-Italic.otf);
  }
  
  @font-face {
    font-family: London;
    src: url(/fonts/london.ttf);
  }
  
  @font-face {
    font-family: Pixel;
    src: url(/fonts/MintsodaLimeGreen.ttf);
  }
  
  @font-face {
    font-family: Gothic;
    src: url(/fonts/gothic.ttf);
  }
  
  @font-face {
    font-family: Geist Mono;
    src: url(/fonts/geist-mono/GeistMono-Regular.woff2);
  }

  @font-face {
    font-family: Romie;
    src: url(/fonts/romie/RomieTrial-Regular-Italic.otf);
  }
  
  @font-face {
    font-family: untitled;
    src: url(/fonts/untitled/test-untitled-sans-regular.woff2) format("woff2");
    font-weight: 400;
  }

  @font-face {
    font-family: untitled;
    src: url(/fonts/untitled/test-untitled-sans-medium.woff2) format("woff2");
    font-weight: 500;
  }

  @font-face {
    font-family: untitled;
    src: url(/fonts/untitled/test-untitled-sans-regular-italic.woff2)
      format("woff2");
    font-style: italic;
  }
  
  @font-face {
    font-family: untitled;
    src: url(/fonts/untitled/test-untitled-sans-medium-italic.woff2)
      format("woff2");
    font-weight: 500;
    font-style: italic;
  }

  @font-face {
    font-family: "Berkeley Mono";
    src: url(/fonts/BerkeleyMono-Regular.ttf);
  }

  html {
    text-rendering: optimizeLegibility;
    -webkit-tap-highlight-color: #e1e1e1;
  }
  a {
    text-underline-offset: 2px;
  }
  
  a:focus-visible {
    outline: solid 2px green;
    outline-offset: 1px;
  }

  a:hover {
    background-color: #eaeaea;
    text-decoration: none;
  }

  tr:last-child > td {
    padding-bottom: 0;
  }

  td {
    vertical-align: top;
  }

  del {
    text-decoration-thickness: 0.08em;
  }

  sup {
    margin-left: 1px;
  }

  select::-ms-expand {
    display: none;
  } 

  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

</style>
