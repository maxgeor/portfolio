---
import Layout from "./Layout.astro";
import DetailsTable from "../components/work/DetailsTable.astro";
const { frontmatter } = Astro.props;
const {
  type,
  title,
  roles,
  year,
  link,
  image,
  tools,
  description,
  collaborators,
  titleTightness = 'normal'
} = frontmatter;
---
<Layout title={title}>
  <main class="grid sm:grid-cols-12 gap-x-10 xl:gap-x-20 gap-y-40 p-5 lg:p-10">
    <header class="col-span-full flex flex-col gap-5 sm:gap-10">
      <div class="flex items-center gap-5 -my-0.5">
        <a href="/" class="font-bodoni uppercase text-xl -my-1.5">MG</a>
        <span class="text-neutral-400">/</span>
        <a href="/" class="hover:underline ">Work</a>
        <span class="text-neutral-400">/</span>
        <p class="opacity-40">{title}</p>
      </div>
    </header>
    <div class="col-span-full flex flex-col md:grid grid-cols-12 gap-10 xl:gap-x-20">
      <div class="col-span-full md:col-span-7 lg:col-span-8 flex flex-col gap-10">
        <h1 class={`
          ${titleTightness === 'tight' ? 'tracking-[-0.21em]' : null}
          font-bodoni text-[#222] uppercase tracking-[-0.063em] text-7xl sm:text-[87px] lg:text-[104px] xl:text-[125px] -mt-1.5 -mb-2.5 sm:-mt-2.5 sm:-mb-3.5 xl:-mt-3.5 xl:-mb-[18px] -ml-0.5
        `}>
          {title}
        </h1>
        <p class="lg:text-[17px] text-neutral-500 -my-1 lg:max-w-[calc(100vh-80px)] lg:max-w-[calc(100vh-160px)]">{description}</p>
      </div>
      <div class="col-span-full md:col-span-5 lg:col-span-4">
        <DetailsTable
          type={type}
          roles={roles}
          year={year}
          tools={tools}
          link={link}
          collaborators={collaborators}
        />
      </div>
    </div>
    <article id="content" class="col-span-full md:col-start-3 lg:col-start-4 md:col-end-11 lg:col-end-10">
      <div class={`
        max-w-none
        prose text-[17px] ml-0 text-black 
        prose-headings:text-[17px] prose-headings:font-bold prose-headings:leading-[1.75] prose-headings:mt-[2.5em] prose-headings:mb-[1.25em]
        prose-li:marker:text-neutral-500 prose-li:marker:text-opacity-50
      `}>
        <slot />
      </div>
    </article>
  </main>
</Layout>

<script>
  const content = document.getElementById('content');
  const details = document.getElementById('work-details');

  const targetPosition = 200;

  function isTriggerElementVisible() {
    const rect = content.getBoundingClientRect();
    return (rect.top <= targetPosition) && ((rect.top + rect.height) >= targetPosition);
  }

  function changeTextColorOnScroll() {
    if (isTriggerElementVisible()) {
      details.style.opacity = '0%';
    } else {
      details.style.opacity = '100%';
    }
  }

  window.addEventListener('scroll', changeTextColorOnScroll);
</script>
